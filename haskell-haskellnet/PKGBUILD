pkgname=haskell-haskellnet
pkgrel=2
pkgver=0.2.1
pkgdesc="network related libraries such as POP3, SMTP, IMAP"
url="http://hackage.haskell.org/package/HaskellNet"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-crypto' 'haskell-haxml' 'haskell-array' 'haskell-base64-string' 'haskell-bytestring' 'haskell-containers' 'haskell-haskell98' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-old-time' 'haskell-parsec' 'haskell-pretty' 'haskell-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HaskellNet/0.2.1/HaskellNet-0.2.1.tar.gz)
install=haskell-haskellnet.install
md5sums=('79857b2703d8521eb7ff63cb25c37b23')
build() {
    cd ${srcdir}/HaskellNet-0.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/HaskellNet
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
