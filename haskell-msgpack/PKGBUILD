pkgname=haskell-msgpack
pkgrel=1
pkgver=0.3.1.1
pkgdesc="A Haskell binding to MessagePack"
url="http://hackage.haskell.org/package/msgpack"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-monadcatchio-transformers' 'haskell-attoparsec' 'haskell-binary' 'haskell-bytestring' 'haskell-data-binary-ieee754' 'haskell-deepseq' 'haskell-iteratee' 'haskell-transformers' 'haskell-vector')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/msgpack/0.3.1.1/msgpack-0.3.1.1.tar.gz)
install=haskell-msgpack.install
md5sums=('a779996bc06063a255a479d14c5d3e88')
build() {
    cd ${srcdir}/msgpack-0.3.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/msgpack
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
