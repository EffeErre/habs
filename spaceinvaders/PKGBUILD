url="http://hackage.haskell.org/package/SpaceInvaders"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-hgl' 'haskell-yampa>=0.9.2' 'haskell-array' 'haskell-random')
depends=('gmp')
options=('strip')
