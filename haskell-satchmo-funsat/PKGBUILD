pkgname=haskell-satchmo-funsat
pkgrel=2
pkgver=1.4
pkgdesc="funsat driver as backend for satchmo"
url="http://hackage.haskell.org/package/satchmo-funsat"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-containers' 'haskell-funsat' 'haskell-parse-dimacs' 'haskell-satchmo>=1.4')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/satchmo-funsat/1.4/satchmo-funsat-1.4.tar.gz)
install=haskell-satchmo-funsat.install
md5sums=('a14947e43f7d12101f7ef8ca5deed103')
build() {
    cd ${srcdir}/satchmo-funsat-1.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/satchmo-funsat
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
