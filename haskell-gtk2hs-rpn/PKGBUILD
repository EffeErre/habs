pkgname=haskell-gtk2hs-rpn
pkgrel=1
pkgver=0.2
pkgdesc="Adds a module to gtk2hs allowing layouts to be defined using\nreverse polish notation."
url="http://hackage.haskell.org/package/gtk2hs-rpn"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cairo' 'haskell-glib' 'haskell-gtk' 'haskell-mtl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gtk2hs-rpn/0.2/gtk2hs-rpn-0.2.tar.gz)
install=haskell-gtk2hs-rpn.install
md5sums=('5b7fefe31b06efcded3372235e8445d3')
build() {
    cd ${srcdir}/gtk2hs-rpn-0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/gtk2hs-rpn
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
