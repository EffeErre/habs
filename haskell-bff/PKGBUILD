pkgdesc="Bidirectionalization for Free! (POPL'09)"
url="http://hackage.haskell.org/package/bff"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bimap>=0.2.3' 'haskell-category-extras>=0.53.5' 'haskell-containers' 'derive>=0.1.1' 'haskell-haskell98' 'haskell-mtl' 'haskell-template-haskell' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/bff/0.2/bff-0.2.tar.gz)
install=haskell-bff.install
