pkgrel=2
pkgver=0.1.0.0
pkgdesc="Utilities for polytypeable."
url="http://hackage.haskell.org/package/polytypeable-utils"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-polytypeable')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/polytypeable-utils/0.1.0.0/polytypeable-utils-0.1.0.0.tar.gz)
install=haskell-polytypeable-utils.install
