pkgname=haskell-debian
pkgrel=2
pkgver=3.40
pkgdesc="Modules for working with the Debian package system"
url="http://hackage.haskell.org/package/debian"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cabal>=1.6.0.1' 'haskell-haxml' 'haskell-unixutils' 'haskell-bytestring' 'haskell-bzlib' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-parsec>=3' 'haskell-pretty' 'haskell-process' 'haskell-regex-compat' 'haskell-regex-posix' 'haskell-syb' 'haskell-time' 'haskell-unix' 'haskell-zlib')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/debian/3.40/debian-3.40.tar.gz)
install=haskell-debian.install
md5sums=('16ab4a6fff3314e6db45d3ecd5491242')
build() {
    cd ${srcdir}/debian-3.40
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/debian
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 debian/copyright ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
