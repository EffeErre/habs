pkgname=haskell-filestore
pkgrel=1
pkgver=0.3.4.3
pkgdesc="Interface for versioning file stores."
url="http://hackage.haskell.org/package/filestore"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-diff' 'haskell-bytestring' 'haskell-datetime' 'haskell-directory' 'haskell-filepath' 'haskell-old-locale' 'haskell-parsec' 'haskell-process' 'haskell-split' 'haskell-time' 'haskell-utf8-string' 'haskell-xml')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/filestore/0.3.4.3/filestore-0.3.4.3.tar.gz)
install=haskell-filestore.install
md5sums=('6dce0fd630234745a67530df84bb37a9')
build() {
    cd ${srcdir}/filestore-0.3.4.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/filestore
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
