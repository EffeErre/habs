pkgname=haskell-cv-combinators
pkgrel=1
pkgver=0.1.2.3
pkgdesc="Functional Combinators for Computer Vision"
url="http://hackage.haskell.org/package/cv-combinators"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hopencv>=0.1.2.1' 'haskell-sdl' 'haskell-allocated-processor>=0.0.2' 'haskell-graphics-drawingcombinators' 'haskell-vector-space')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cv-combinators/0.1.2.3/cv-combinators-0.1.2.3.tar.gz)
install=haskell-cv-combinators.install
