pkgname=haskell-funsat
pkgrel=2
pkgver=0.6.0
pkgdesc="A modern DPLL-style SAT solver"
url="http://hackage.haskell.org/package/funsat"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck<2' 'haskell-array' 'haskell-bimap' 'haskell-bitset' 'haskell-containers' 'haskell-fgl' 'haskell-mtl' 'haskell-parse-dimacs' 'haskell-pretty' 'haskell-random' 'haskell-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/funsat/0.6.0/funsat-0.6.0.tar.gz)
install=haskell-funsat.install
md5sums=('7632183ef9c9e736a350584ba8ea9bdd')
build() {
    cd ${srcdir}/funsat-0.6.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/funsat
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
