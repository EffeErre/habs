pkgdesc="A breadth-first list monad."
url="http://hackage.haskell.org/package/control-monad-omega"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/control-monad-omega/0.3/control-monad-omega-0.3.tar.gz)
