pkgname=haskell-hinstaller
pkgrel=2
pkgver=2008.2.16
pkgdesc="Installer wrapper for Haskell applications"
url="http://hackage.haskell.org/package/hinstaller"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cabal>=1.2.3.0' 'haskell-bytestring' 'haskell-directory' 'haskell-filepath' 'haskell-process' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hinstaller/2008.2.16/hinstaller-2008.2.16.tar.gz)
install=haskell-hinstaller.install
md5sums=('0bcb6b537f50b5f980747880d492906d')
build() {
    cd ${srcdir}/hinstaller-2008.2.16
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/hinstaller
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
