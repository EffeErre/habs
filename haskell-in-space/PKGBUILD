pkgdesc="'Asteroids' arcade games."
url="http://hackage.haskell.org/package/haskell-in-space"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-hgl' 'haskell-random')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/haskell-in-space/0.1.1/haskell-in-space-0.1.1.tar.gz)
