pkgname=statechart
pkgrel=1
pkgver=0.1.0
pkgdesc="Compiles Rhapsody statecharts to C."
url="http://hackage.haskell.org/package/statechart"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-polyparse>=1.4')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/statechart/0.1.0/statechart-0.1.0.tar.gz)
