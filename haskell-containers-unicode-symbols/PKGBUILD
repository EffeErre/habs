pkgname=haskell-containers-unicode-symbols
pkgrel=1
pkgver=0.3
pkgdesc="Unicode alternatives for common functions and operators"
url="http://hackage.haskell.org/package/containers-unicode-symbols"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-base-unicode-symbols' 'haskell-containers<0.4')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/containers-unicode-symbols/0.3/containers-unicode-symbols-0.3.tar.gz)
install=haskell-containers-unicode-symbols.install
md5sums=('11ed43b1be579a147bee3fac9775a184')
build() {
    cd ${srcdir}/containers-unicode-symbols-0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/containers-unicode-symbols
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
