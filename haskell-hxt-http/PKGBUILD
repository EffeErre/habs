pkgname=haskell-hxt-http
pkgrel=1
pkgver=9.0.0
pkgdesc="Interface to native Haskell HTTP package HTTP"
url="http://hackage.haskell.org/package/hxt-http"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-http' 'haskell-bytestring' 'haskell-haskell98' 'haskell-hxt' 'haskell-network' 'haskell-parsec')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hxt-http/9.0.0/hxt-http-9.0.0.tar.gz)
install=haskell-hxt-http.install
md5sums=('7a0c274ad1bebd9c92ef6f0d12bba896')
build() {
    cd ${srcdir}/hxt-http-9.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/hxt-http
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
