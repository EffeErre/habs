pkgname=haskell-criterion
pkgrel=2
pkgver=0.4.1.0
pkgdesc="Robust, reliable performance measurement and analysis"
url="http://hackage.haskell.org/package/criterion"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-chart>=0.12' 'haskell-bytestring' 'haskell-containers' 'haskell-data-accessor' 'haskell-deepseq>=1.1.0.0' 'haskell-filepath' 'haskell-mtl' 'haskell-parallel' 'haskell-parsec' 'haskell-statistics>=0.3.5' 'haskell-time' 'haskell-uvector>=0.1.0.5' 'haskell-uvector-algorithms>=0.2')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/criterion/0.4.1.0/criterion-0.4.1.0.tar.gz)
install=haskell-criterion.install
md5sums=('55f90d0fff67dff305fde7fa684fab54')
build() {
    cd ${srcdir}/criterion-0.4.1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/criterion
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
