pkgname=haskell-tuple
pkgrel=2
pkgver=0.2.0.1
pkgdesc="Various functions on tuples"
url="http://hackage.haskell.org/package/tuple"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-onetuple')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/tuple/0.2.0.1/tuple-0.2.0.1.tar.gz)
install=haskell-tuple.install
md5sums=('eec6e6895f2cd62ae30dae235333fdc1')
build() {
    cd ${srcdir}/tuple-0.2.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/tuple
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
