pkgname=haskell-statistics
pkgrel=1
pkgver=0.8.0.1
pkgdesc="A library of statistical types, data, and functions"
url="http://hackage.haskell.org/package/statistics"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-erf' 'haskell-mwc-random>=0.7.0.0' 'haskell-primitive>=0.3' 'haskell-time' 'haskell-vector>=0.6.0.2' 'haskell-vector-algorithms>=0.3.2')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/statistics/0.8.0.1/statistics-0.8.0.1.tar.gz)
install=haskell-statistics.install
md5sums=('5f700796ef121c2ba32ad8a3dca3663a')
build() {
    cd ${srcdir}/statistics-0.8.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/statistics
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
