pkgrel=1
pkgver=2.2.8
pkgdesc="Command-line program for type-checking and compiling Agda programs"
url="http://hackage.haskell.org/package/Agda-executable"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-agda=2.2.8')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Agda-executable/2.2.8/Agda-executable-2.2.8.tar.gz)
