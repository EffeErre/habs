makedepends=('ghc' 'haskell-cabal' 'haskell-ansi-wl-pprint' 'haskell-base-unicode-symbols' 'haskell-bytestring' 'haskell-cmdargs' 'haskell-usb' 'haskell-usb-id-database' 'haskell-usb-safe')
