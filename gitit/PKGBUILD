# Maintainer: Arch Haskell Team <arch-haskell@haskell.org>
_hkgname=gitit
pkgname=gitit
pkgver=0.7.2
pkgrel=2
pkgdesc="Wiki using happstack, git or darcs, and pandoc."
url="http://hackage.haskell.org/package/${_hkgname}"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('gmp' 'ghc' 'haskell-configfile>=1' 'haskell-hstringtemplate' 'haskell-http' 'haskell-sha>1' 'haskell-bytestring' 'haskell-cautious-file<0.2' 'haskell-cgi' 'haskell-containers' 'haskell-datetime' 'haskell-directory' 'haskell-feed>=0.3.6' 'haskell-filepath' 'haskell-filestore>=0.3.4' 'haskell-ghc-paths' 'haskell-happstack-server<0.5' 'haskell-happstack-util<0.5' 'haskell-highlighting-kate' 'haskell-hslogger<1.1' 'haskell-mtl' 'haskell-network>=2.1.0.0' 'haskell-old-time' 'haskell-pandoc>=1.4' 'haskell-parsec<3' 'haskell-pretty' 'haskell-process' 'haskell-random' 'haskell-recaptcha>=0.1' 'haskell-safe' 'haskell-syb' 'haskell-texmath' 'haskell-url' 'haskell-utf8-string' 'haskell-xhtml' 'haskell-xml>=1.3.5' 'haskell-zlib')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
install=${pkgname}.install
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O --enable-split-objs
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
    sed -i -r -e "s|ghc-pkg.*unregister[^ ]* |&'--force' |" unregister.sh
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/${pkgname}/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/${pkgname}/unregister.sh
    install -d -m755 ${pkgdir}/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/${_hkgname}
    runhaskell Setup copy --destdir=${pkgdir}
}
md5sums=('6df132059f45c38a9d7529ef6720d5b0')
