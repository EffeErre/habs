pkgver=3.0
pkgdesc="A Supercompiler"
url="http://hackage.haskell.org/package/supero"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-containers' 'cpphs=1.11' 'haskell-directory' 'haskell-filepath' 'haskell-haskell-src-exts=1.9.0' 'haskell-mtl' 'haskell-process' 'haskell-time' 'haskell-uniplate')
