pkgname=haskell-vacuum
pkgrel=1
pkgver=1.0.0
pkgdesc="Extract graph representations of ghc heap values."
url="http://hackage.haskell.org/package/vacuum"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-containers' 'haskell-pretty')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/vacuum/1.0.0/vacuum-1.0.0.tar.gz)
install=haskell-vacuum.install
md5sums=('c87c2e26662b7b95162d7a34023105ad')
build() {
    cd ${srcdir}/vacuum-1.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/vacuum
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
