pkgname=haskell-ieee754-parser
pkgrel=2
pkgver=0.1
pkgdesc="Parser for IEEE-754 floating-point values"
url="http://hackage.haskell.org/package/ieee754-parser"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-bytestring')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ieee754-parser/0.1/ieee754-parser-0.1.tar.gz)
install=haskell-ieee754-parser.install
md5sums=('d3988b53d23b97535c51230b83aee029')
build() {
    cd ${srcdir}/ieee754-parser-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/ieee754-parser
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
