pkgname=diffcabal
pkgrel=1
pkgver=0.1.1
pkgdesc="Diff two .cabal files syntactically"
url="http://hackage.haskell.org/package/diffcabal"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-cabal>1.6' 'haskell-diff' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-pretty' 'haskell-process')
