pkgname=haskell-bamboo
pkgrel=1
pkgver=2010.2.25
pkgdesc="A blog engine on Hack"
url="http://hackage.haskell.org/package/bamboo"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-containers' 'haskell-data-default>=0.2' 'haskell-directory' 'haskell-filepath' 'haskell-gravatar>=0.3' 'haskell-hack>=2009.10.30' 'haskell-hack-contrib>=2010.1.26' 'haskell-haskell98' 'haskell-mps>=2009.1.26' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-old-time' 'haskell-pandoc' 'haskell-parsec>=2' 'haskell-parsedate>=3000.0.0' 'haskell-process' 'haskell-time' 'haskell-unix' 'haskell-utf8-string>=0.3.3' 'haskell-xhtml' 'haskell-zlib')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/bamboo/2010.2.25/bamboo-2010.2.25.tar.gz)
install=haskell-bamboo.install
md5sums=('f26a44119b0ca5df5ff15b3483924994')
build() {
    cd ${srcdir}/bamboo-2010.2.25
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/bamboo
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
