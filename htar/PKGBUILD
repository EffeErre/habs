pkgdesc="Command-line tar archive utility."
url="http://hackage.haskell.org/package/htar"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-bytestring>=0.9' 'haskell-bzlib' 'haskell-directory>=1.0' 'haskell-filepath>=1' 'haskell-old-locale>=1.0' 'haskell-old-time>=1.0' 'haskell-tar' 'haskell-zlib')
