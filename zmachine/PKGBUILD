pkgname=zmachine
pkgrel=2
pkgver=0.0
pkgdesc="A Z-machine interpreter"
url="http://hackage.haskell.org/package/ZMachine"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'gtk2hs' 'haskell-array' 'haskell-mtl' 'haskell-random')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ZMachine/0.0/ZMachine-0.0.tar.gz)
