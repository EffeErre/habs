makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-missingh' 'haskell-cgi' 'haskell-containers' 'haskell-data-default>=0.2' 'haskell-directory' 'haskell-filepath' 'haskell-gravatar>=0.3' 'haskell-haskell98' 'haskell-hcheat>=2008.11.6' 'haskell-kibro>=0.4.2' 'haskell-mps>=2008.11.6' 'haskell-network' 'haskell-old-locale' 'haskell-old-time' 'haskell-pandoc' 'haskell-parsec>=2' 'haskell-parsedate>=3000.0.0' 'haskell-process' 'haskell-rss>=3000.0.1' 'haskell-utf8-string>=0.3.3' 'haskell-xhtml')
