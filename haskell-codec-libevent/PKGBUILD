makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck>=1.1' 'haskell-array' 'haskell-binary>=0.4.1' 'haskell-binary-strict>=0.1' 'haskell-bytestring>=0.9' 'haskell-containers' 'haskell-parsec>=2.1' 'haskell-regex-compat>=0.71')
