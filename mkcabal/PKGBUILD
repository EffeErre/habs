makedepends=('ghc' 'haskell-cabal' 'haskell-directory' 'haskell-extensible-exceptions' 'haskell-mtl' 'haskell-old-locale' 'haskell-old-time' 'haskell-pcre-light>=0.3' 'haskell-pretty' 'haskell-readline')
