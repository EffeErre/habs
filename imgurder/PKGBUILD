url="http://hackage.haskell.org/package/imgurder"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-curl>=1.3.5' 'haskell-directory>=1.0.0.3' 'haskell-haskell98>=1' 'haskell-hxt>=8.3.2' 'haskell-hxt-xpath>=8.5.4')
