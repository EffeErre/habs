url="http://hackage.haskell.org/package/YACPong"
license=('custom:MIT')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-sdl' 'haskell-sdl-image' 'haskell-sdl-mixer' 'haskell-sdl-ttf' 'haskell-data-accessor-transformers' 'haskell-fclabels' 'haskell-monads-fd' 'haskell-random' 'haskell-transformers')
