pkgname=haskell-orchid
pkgrel=2
pkgver=0.0.8
pkgdesc="Haskell Wiki Library"
url="http://hackage.haskell.org/package/orchid"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck' 'haskell-bytestring' 'haskell-containers' 'haskell-encoding' 'haskell-extensible-exceptions' 'haskell-fclabels' 'haskell-filestore' 'hscolour' 'haskell-mtl' 'haskell-nano-md5' 'haskell-parsec' 'haskell-process' 'haskell-salvia' 'haskell-salvia-extras' 'haskell-stm' 'haskell-time' 'haskell-unix' 'haskell-xml')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/orchid/0.0.8/orchid-0.0.8.tar.gz)
install=haskell-orchid.install
md5sums=('67f265cd4989752c5ad47914ce1dab18')
build() {
    cd ${srcdir}/orchid-0.0.8
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/orchid
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
