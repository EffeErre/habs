pkgname=haskell-sifflet-lib
pkgrel=1
pkgver=1.1
pkgdesc="Library of modules shared by sifflet and its\ntests and its exporters."
url="http://hackage.haskell.org/package/sifflet-lib"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cairo' 'haskell-containers' 'haskell-directory' 'haskell-fgl' 'haskell-filepath' 'haskell-glib' 'haskell-gtk' 'haskell-haskell98' 'haskell-hxt' 'haskell-mtl' 'haskell-parsec' 'haskell-process' 'haskell-unix' 'gtk')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/sifflet-lib/1.1/sifflet-lib-1.1.tar.gz)
install=haskell-sifflet-lib.install
md5sums=('94fa05250a2ded31b1b448e14c280202')
build() {
    cd ${srcdir}/sifflet-lib-1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/sifflet-lib
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
