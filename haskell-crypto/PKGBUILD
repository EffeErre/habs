pkgname=haskell-crypto
pkgrel=1
pkgver=4.2.1
pkgdesc="Collects together existing Haskell cryptographic functions into a package"
url="http://hackage.haskell.org/package/Crypto"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hunit' 'haskell-quickcheck>=2' 'haskell-array' 'haskell-pretty' 'haskell-random')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Crypto/4.2.1/Crypto-4.2.1.tar.gz)
install=haskell-crypto.install
md5sums=('ac62cbabb51710c42643a3a3fee83c4c')
build() {
    cd ${srcdir}/Crypto-4.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Crypto
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 ReadMe.tex ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
