pkgname=haskell-local-search
pkgrel=1
pkgver=0.0.3
pkgdesc="A first attempt at generalised local search within Haskell, for applications in combinatorial optimisation."
url="http://hackage.haskell.org/package/local-search"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers>=0.2.0.1' 'haskell-random>=1.0.0.1')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/local-search/0.0.3/local-search-0.0.3.tar.gz)
install=haskell-local-search.install
md5sums=('cb77a5bef740968a537ffe9fd0256d41')
build() {
    cd ${srcdir}/local-search-0.0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/local-search
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
