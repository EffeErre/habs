pkgname=haskell-template-haskell
pkgrel=2
pkgver=2.4.0.0
pkgdesc="Facilities for manipulating Haskell source code using Template Haskell."
url="http://hackage.haskell.org/package/template-haskell"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-pretty')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/template-haskell/2.4.0.0/template-haskell-2.4.0.0.tar.gz)
install=haskell-template-haskell.install
md5sums=('db1ba6fb3befd63095c45d0a380e78fd')
build() {
    cd ${srcdir}/template-haskell-2.4.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/template-haskell
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
