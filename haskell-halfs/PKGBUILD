pkgname=haskell-halfs
pkgrel=2
pkgver=0.2
pkgdesc="Haskell File System"
url="http://hackage.haskell.org/package/halfs"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hunit' 'haskell-quickcheck' 'haskell-array' 'haskell-containers' 'haskell-directory' 'haskell-mtl' 'haskell-network' 'haskell-process' 'haskell-random' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/halfs/0.2/halfs-0.2.tar.gz)
install=haskell-halfs.install
md5sums=('c5e17985ca4a7c1b0c18bb6ebcd9889a')
build() {
    cd ${srcdir}/halfs-0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/halfs
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
