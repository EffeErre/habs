pkgver=0.0.6.1
pkgdesc="Portable Haskell/POSIX layer for Pugs"
url="http://hackage.haskell.org/package/pugs-compat"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-haskell98' 'haskell-mtl' 'haskell-network' 'haskell-process' 'haskell-random' 'haskell-regex-base' 'haskell-regex-pcre-builtin' 'haskell-stm' 'haskell-stringtable-atom>=0.0.6.1' 'haskell-time' 'haskell-unix' 'haskell-utf8-string')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/pugs-compat/0.0.6.1/pugs-compat-0.0.6.1.tar.gz)
install=haskell-pugs-compat.install
