pkgname=carboncopy
pkgrel=1
pkgver=0.1
pkgdesc="Drop emails from threads being watched into special CC folder."
url="http://hackage.haskell.org/package/carboncopy"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-ifelse>=0.85' 'haskell-missingh>=1.1.0.1' 'haskell-bytestring>=0.9.1.4' 'haskell-filepath>=1.1.0.2' 'haskell-haskell98')
