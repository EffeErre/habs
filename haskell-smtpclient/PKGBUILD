pkgname=haskell-smtpclient
pkgrel=1
pkgver=1.0.3
pkgdesc="A simple SMTP client library"
url="http://hackage.haskell.org/package/SMTPClient"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-extensible-exceptions' 'haskell-hsemail' 'haskell-network' 'haskell-old-locale' 'haskell-old-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/SMTPClient/1.0.3/SMTPClient-1.0.3.tar.gz)
install=haskell-smtpclient.install
md5sums=('66a47de75b9fa4c459a2dcf7b8ee7bbe')
build() {
    cd ${srcdir}/SMTPClient-1.0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/SMTPClient
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
