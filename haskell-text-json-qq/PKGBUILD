pkgname=haskell-text-json-qq
pkgrel=1
pkgver=0.2.0
pkgdesc="Json Quasiquatation for Haskell."
url="http://hackage.haskell.org/package/text-json-qq"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell-src-meta>=0.1.0' 'haskell-json' 'haskell-parsec' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/text-json-qq/0.2.0/text-json-qq-0.2.0.tar.gz)
install=haskell-text-json-qq.install
md5sums=('f65ee7ac0d974db77ab17d12c3c78626')
build() {
    cd ${srcdir}/text-json-qq-0.2.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/text-json-qq
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 COPYING.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
