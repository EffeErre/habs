pkgname=haskell-netstring-enumerator
pkgrel=1
pkgver=0.1
pkgdesc="Enumerator-based netstring parsing"
url="http://hackage.haskell.org/package/netstring-enumerator"
license=('GPL-3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-enumerator' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/netstring-enumerator/0.1/netstring-enumerator-0.1.tar.gz)
install=haskell-netstring-enumerator.install
md5sums=('719dc62ac2d0be9ef628ca211d0ef2a5')
build() {
    cd ${srcdir}/netstring-enumerator-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/netstring-enumerator
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
