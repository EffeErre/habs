pkgname=haskell-gconf
pkgrel=1
pkgver=0.11.0
pkgdesc="Binding to the GNOME configuration database system."
url="http://hackage.haskell.org/package/gconf"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-containers' 'haskell-glib' 'haskell-haskell98' 'haskell-mtl' 'gconf' 'gtk2hs-buildtools' 'gtk2hs-buildtools' 'gtk2hs-buildtools')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gconf/0.11.0/gconf-0.11.0.tar.gz)
install=haskell-gconf.install
md5sums=('1f4135edfc9a0d8745cb74b34b51d224')
build() {
    cd ${srcdir}/gconf-0.11.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/gconf
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
