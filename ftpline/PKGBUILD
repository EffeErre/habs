pkgname=ftpline
pkgrel=1
pkgver=1.0.0
pkgdesc="A command-line FTP client."
url="http://hackage.haskell.org/package/FTPLine"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-missingh' 'haskell-ansi-terminal' 'haskell-directory' 'haskell-ftphs' 'haskell-haskeline' 'haskell-mtl' 'haskell-network')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/FTPLine/1.0.0/FTPLine-1.0.0.tar.gz)
