url="http://hackage.haskell.org/package/regex-pcre"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-containers' 'haskell-regex-base>=0.93' 'pcre')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/regex-pcre/0.94.2/regex-pcre-0.94.2.tar.gz)
install=haskell-regex-pcre.install
