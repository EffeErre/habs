pkgrel=1
pkgver=0.1.1
pkgdesc="Infinite state model checking of iterative C programs."
url="http://hackage.haskell.org/package/afv"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-directory' 'haskell-language-c>=0.3.1.1' 'haskell-mtl' 'haskell-process' 'haskell-yices>=0.0.0.6')
