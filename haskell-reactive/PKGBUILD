pkgname=haskell-reactive
pkgrel=1
pkgver=0.11.5
pkgdesc="Push-pull functional reactive programming"
url="http://hackage.haskell.org/package/reactive"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck>=2.1.0.2' 'haskell-stream>=0.3.1' 'haskell-typecompose>=0.8.0' 'haskell-category-extras>=0.53.5' 'haskell-checkers>=0.2.3' 'haskell-old-time' 'haskell-random' 'haskell-unamb>=0.1.5' 'haskell-vector-space>=0.5')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/reactive/0.11.5/reactive-0.11.5.tar.gz)
install=haskell-reactive.install
md5sums=('4142095852240a503d11cdc43d6a3825')
build() {
    cd ${srcdir}/reactive-0.11.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/reactive
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 COPYING ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
