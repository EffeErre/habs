pkgname=haskell-wai-frontend-monadcgi
pkgrel=1
pkgver=0.0.0
pkgdesc="Allows programs written against MonadCGI to run with any WAI handler."
url="http://hackage.haskell.org/package/wai-frontend-monadcgi"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-cgi' 'haskell-containers>=0.2' 'haskell-wai')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/wai-frontend-monadcgi/0.0.0/wai-frontend-monadcgi-0.0.0.tar.gz)
install=haskell-wai-frontend-monadcgi.install
md5sums=('f07f2d1f7f136ea0c495a9cab1bd6013')
build() {
    cd ${srcdir}/wai-frontend-monadcgi-0.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/wai-frontend-monadcgi
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
