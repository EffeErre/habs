pkgname=haskell-gf
pkgrel=2
pkgver=3.1.6.2
pkgdesc="Grammatical Framework"
url="http://hackage.haskell.org/package/gf"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-haskeline' 'haskell-mtl' 'haskell-old-time' 'haskell-pretty' 'haskell-process' 'haskell-random' 'haskell-unix' 'happy' 'alex')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gf/3.1.6.2/gf-3.1.6.2.tar.gz)
install=haskell-gf.install
md5sums=('f5ef42865d75150a93b193a8c2be4b65')
build() {
    cd ${srcdir}/gf-3.1.6.2
    patch -p0 < ../../stack.patch
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/gf
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
