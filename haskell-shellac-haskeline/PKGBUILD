pkgname=haskell-shellac-haskeline
pkgrel=2
pkgver=0.2
pkgdesc="Haskeline backend module for Shellac"
url="http://hackage.haskell.org/package/Shellac-haskeline"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-shellac' 'haskell-bytestring' 'haskell-haskeline' 'haskell-mtl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Shellac-haskeline/0.2/Shellac-haskeline-0.2.tar.gz)
install=haskell-shellac-haskeline.install
md5sums=('069c333f13512ff785bece7521284271')
build() {
    cd ${srcdir}/Shellac-haskeline-0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Shellac-haskeline
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
