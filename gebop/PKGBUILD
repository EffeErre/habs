url="http://hackage.haskell.org/package/GeBoP"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-directory<1.1' 'haskell-haskell98<1.1' 'haskell-wx' 'haskell-wxcore')
depends=('gmp')
