license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-array>=0.2' 'haskell-binary>=0.5' 'haskell-bytestring>=0.9' 'haskell-containers>=0.2' 'haskell-hashable>=1.0' 'haskell-mtl>=1.1' 'haskell-pretty>=1.0' 'haskell-utf8-string>=0.3' 'haskell-vector>=0.5')
