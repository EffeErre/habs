pkgname=haskell-wai-extra
pkgrel=1
pkgver=0.2.4
pkgdesc="Provides some basic WAI handlers and middleware."
url="http://hackage.haskell.org/package/wai-extra"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-directory' 'haskell-network' 'haskell-old-locale' 'haskell-time' 'haskell-utf8-string' 'haskell-wai' 'haskell-zlib-bindings')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/wai-extra/0.2.4/wai-extra-0.2.4.tar.gz)
install=haskell-wai-extra.install
md5sums=('8185b1ad10b120457d16fb763cdffba0')
build() {
    cd ${srcdir}/wai-extra-0.2.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
}
package() {
    cd ${srcdir}/wai-extra-0.2.4
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/${pkgname}/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/${pkgname}/unregister.sh
    install -d -m755 ${pkgdir}/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/wai-extra
    runhaskell Setup copy --destdir=${pkgdir}
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
