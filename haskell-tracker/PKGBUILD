pkgname=haskell-tracker
pkgrel=2
pkgver=0.1
pkgdesc="Client library for Tracker metadata database, indexer and search tool"
url="http://hackage.haskell.org/package/tracker"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'gtk2hs' 'haskell-containers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/tracker/0.1/tracker-0.1.tar.gz)
install=haskell-tracker.install
md5sums=('d29619b448363a3f1c9474afb9ec140c')
build() {
    cd ${srcdir}/tracker-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/tracker
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
