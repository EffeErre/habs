pkgname=haskell-data-rope
pkgrel=1
pkgver=0.2
pkgdesc="Ropes, an alternative to (Byte)Strings."
url="http://hackage.haskell.org/package/Data-Rope"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Data-Rope/0.2/Data-Rope-0.2.tar.gz)
install=haskell-data-rope.install
md5sums=('656408493c3e5a0357227340ac59163c')
build() {
    cd ${srcdir}/Data-Rope-0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Data-Rope
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
