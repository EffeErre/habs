pkgname=haskell-http-enumerator
pkgrel=1
pkgver=0.2.0.1
pkgdesc="HTTP client package with enumerator interface and HTTPS support."
url="http://hackage.haskell.org/package/http-enumerator"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-attoparsec' 'haskell-attoparsec-enumerator' 'haskell-blaze-builder' 'haskell-bytestring' 'haskell-enumerator' 'haskell-failure' 'haskell-mtl' 'haskell-network' 'haskell-network-bytestring' 'haskell-tls' 'haskell-transformers' 'haskell-utf8-string' 'haskell-zlib-bindings')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/http-enumerator/0.2.0.1/http-enumerator-0.2.0.1.tar.gz)
install=haskell-http-enumerator.install
md5sums=('730e3590aff415ebaf03cf3029c0bf9f')
build() {
    cd ${srcdir}/http-enumerator-0.2.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/http-enumerator
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
