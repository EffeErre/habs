pkgname=cabal2arch
pkgrel=1
pkgver=0.7.5
pkgdesc="Create Arch Linux packages from Cabal packages."
url="http://hackage.haskell.org/package/cabal2arch"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-cabal>1.8' 'haskell-archlinux>=0.3.3' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-pretty' 'haskell-process')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cabal2arch/0.7.5/cabal2arch-0.7.5.tar.gz)
md5sums=(215f412b3edf70cd683c9a5f6c394183)
build() {
    cd ${srcdir}/cabal2arch-0.7.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
}
package() {
    cd ${srcdir}/cabal2arch-0.7.5
    runhaskell Setup copy --destdir=${pkgdir}
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
