pkgname=haskell-fastirc
pkgrel=1
pkgver=0.2.0
pkgdesc="Fast Internet Relay Chat (IRC) library"
url="http://hackage.haskell.org/package/fastirc"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-attoparsec>=0.8' 'haskell-bytestring>=0.9.1.4' 'haskell-bytestring-show>=0.3.3' 'haskell-containers>=0.2.0.1' 'haskell-monadlib>=3.6.1' 'haskell-network-fancy>=0.1.4')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/fastirc/0.2.0/fastirc-0.2.0.tar.gz)
install=haskell-fastirc.install
md5sums=('15b1da5ffaa650aa7fdac9681ce4d13f')
build() {
    cd ${srcdir}/fastirc-0.2.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/fastirc
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
