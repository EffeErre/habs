pkgrel=1
pkgver=2.0.1
pkgdesc="Example applications for Elerea"
url="http://hackage.haskell.org/package/elerea-examples"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-glfw>=0.4' 'haskell-opengl' 'haskell-elerea>=2.0.0')
depends=('gmp')
