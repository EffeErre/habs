pkgname=haskell-roman-numerals
pkgrel=1
pkgver=0.4
pkgdesc="Parsing and pretty printing of Roman numerals"
url="http://hackage.haskell.org/package/roman-numerals"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-base-unicode-symbols' 'haskell-bytestring' 'haskell-monads-fd')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/roman-numerals/0.4/roman-numerals-0.4.tar.gz)
install=haskell-roman-numerals.install
md5sums=('9230a3fa62d0e0ffd7213cca35450ea2')
build() {
    cd ${srcdir}/roman-numerals-0.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/roman-numerals
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
