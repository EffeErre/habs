pkgname=haskell-sox
pkgrel=2
pkgver=0.1
pkgdesc="Play, write, read, convert audio signals using Sox"
url="http://hackage.haskell.org/package/sox"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-explicit-exception' 'haskell-process' 'haskell-sample-frame' 'haskell-transformers' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/sox/0.1/sox-0.1.tar.gz)
install=haskell-sox.install
md5sums=('08638674b2bd215d34778cc0b504c3c6')
build() {
    cd ${srcdir}/sox-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/sox
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
