pkgname=haskell-esotericbot
pkgrel=2
pkgver=0.0.6
pkgdesc="Esotericbot is a sophisticated, lightweight IRC bot."
url="http://hackage.haskell.org/package/esotericbot"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-attoparsec' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-fgl' 'haskell-mtl' 'haskell-network' 'haskell-stm' 'haskell-stream-fusion' 'haskell-tuple' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/esotericbot/0.0.6/esotericbot-0.0.6.tar.gz)
install=haskell-esotericbot.install
md5sums=('7f703e8ddf5ef234a8fa724dcf8e0047')
build() {
    cd ${srcdir}/esotericbot-0.0.6
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/esotericbot
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 License ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
