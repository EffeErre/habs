pkgname=haskell-decisiontree
pkgrel=2
pkgver=0.0
pkgdesc="A very simple implementation of decision trees for discrete attributes."
url="http://hackage.haskell.org/package/DecisionTree"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers>=0.2.0.0')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/DecisionTree/0.0/DecisionTree-0.0.tar.gz)
install=haskell-decisiontree.install
md5sums=('5e11dff21cd5ea6a75aa1651d66063b0')
build() {
    cd ${srcdir}/DecisionTree-0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/DecisionTree
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
