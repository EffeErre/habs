pkgname=haskell-vacuum-opengl
pkgrel=2
pkgver=0.0.3
pkgdesc="Visualize live Haskell data structures using vacuum, graphviz and OpenGL."
url="http://hackage.haskell.org/package/vacuum-opengl"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-glut>=2.1' 'haskell-opengl>=2.2' 'haskell-bitmap' 'haskell-bitmap-opengl' 'haskell-directory' 'haskell-filepath' 'haskell-network' 'haskell-pretty' 'haskell-process' 'haskell-stb-image' 'haskell-vacuum>=0.0.90')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/vacuum-opengl/0.0.3/vacuum-opengl-0.0.3.tar.gz)
install=haskell-vacuum-opengl.install
md5sums=('c92b412c56a1bd4b29c33525dd2425fe')
build() {
    cd ${srcdir}/vacuum-opengl-0.0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/vacuum-opengl
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
