pkgname=haskell-data-accessor-template
pkgrel=1
pkgver=0.2.1.5
pkgdesc="Utilities for accessing and manipulating fields of records"
url="http://hackage.haskell.org/package/data-accessor-template"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-data-accessor' 'haskell-template-haskell' 'haskell-utility-ht')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/data-accessor-template/0.2.1.5/data-accessor-template-0.2.1.5.tar.gz)
install=haskell-data-accessor-template.install
md5sums=('0f0da0712213e60c233f639b6d711c24')
build() {
    cd ${srcdir}/data-accessor-template-0.2.1.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/data-accessor-template
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
