pkgname=haskell-hsdns
pkgrel=1
pkgver=1.4.3
pkgdesc="Asynchronous DNS Resolver"
url="http://hackage.haskell.org/package/hsdns"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-network' 'adns')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hsdns/1.4.3/hsdns-1.4.3.tar.gz)
install=haskell-hsdns.install
md5sums=('05a58e9e94bdfcb96d7f744f5deaa25c')
build() {
    cd ${srcdir}/hsdns-1.4.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/hsdns
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
