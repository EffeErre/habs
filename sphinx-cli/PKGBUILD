pkgname=sphinx-cli
pkgrel=2
pkgver=0.1
pkgdesc="Sphinx CLI and demo of Haskell Sphinx library"
url="http://hackage.haskell.org/package/sphinx-cli"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-sphinx>=0.1')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/sphinx-cli/0.1/sphinx-cli-0.1.tar.gz)
