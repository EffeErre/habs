pkgname=haskell-iff
pkgrel=2
pkgver=0.0.1
pkgdesc="Constructing and dissecting IFF files"
url="http://hackage.haskell.org/package/iff"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring>=0.9' 'haskell-mtl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/iff/0.0.1/iff-0.0.1.tar.gz)
install=haskell-iff.install
md5sums=('06005793286fdfee5a8d1a02bc188e10')
build() {
    cd ${srcdir}/iff-0.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/iff
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
