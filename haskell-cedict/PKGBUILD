pkgname=haskell-cedict
pkgrel=2
pkgver=0.2.5
pkgdesc="Convenient Chinese phrase & character lookup."
url="http://hackage.haskell.org/package/cedict"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-containers' 'haskell-mtl' 'haskell-parsec<2.2' 'haskell-utf8-string')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cedict/0.2.5/cedict-0.2.5.tar.gz)
install=haskell-cedict.install
md5sums=('409f62c23a6c091fdf05a111de8d4b87')
build() {
    cd ${srcdir}/cedict-0.2.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/cedict
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
