pkgname=haskell-vty
pkgrel=1
pkgver=4.4.0.0
pkgdesc="A simple terminal access library"
url="http://hackage.haskell.org/package/vty"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-containers' 'haskell-deepseq' 'haskell-mtl' 'haskell-parallel' 'haskell-parsec' 'haskell-terminfo' 'haskell-unix' 'haskell-utf8-string' 'haskell-vector-space')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/vty/4.4.0.0/vty-4.4.0.0.tar.gz)
install=haskell-vty.install
md5sums=('94526d9dbd271b182e9dd6080e49eb83')
build() {
    cd ${srcdir}/vty-4.4.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
}
package() {
    cd ${srcdir}/vty-4.4.0.0
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/${pkgname}/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/${pkgname}/unregister.sh
    install -d -m755 ${pkgdir}/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/vty
    runhaskell Setup copy --destdir=${pkgdir}
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
