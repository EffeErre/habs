pkgname=haskell-safer-file-handles
pkgrel=1
pkgver=0.8
pkgdesc="Type-safe file handling"
url="http://hackage.haskell.org/package/safer-file-handles"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-monadcatchio-transformers' 'haskell-base-unicode-symbols' 'haskell-explicit-iomodes' 'haskell-pathtype' 'haskell-regional-pointers' 'haskell-regions' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/safer-file-handles/0.8/safer-file-handles-0.8.tar.gz)
install=haskell-safer-file-handles.install
md5sums=('4a736cc3aa1009fef1e7750241d4c8b5')
build() {
    cd ${srcdir}/safer-file-handles-0.8
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/safer-file-handles
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
