pkgname=haskell-gtkglext
pkgrel=1
pkgver=0.11.0
pkgdesc="Binding to the GTK+ OpenGL Extension"
url="http://hackage.haskell.org/package/gtkglext"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-cairo' 'haskell-containers' 'haskell-glib' 'haskell-gtk' 'haskell-haskell98' 'haskell-mtl' 'haskell-pango' 'gtkglext' 'gtk2hs-buildtools' 'gtk2hs-buildtools' 'gtk2hs-buildtools')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gtkglext/0.11.0/gtkglext-0.11.0.tar.gz)
install=haskell-gtkglext.install
md5sums=('e0ed0f59286726590ec1bea5a246afa3')
build() {
    cd ${srcdir}/gtkglext-0.11.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/gtkglext
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
