license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-curl' 'haskell-directory' 'haskell-filepath' 'haskell-json' 'haskell-mtl' 'haskell-old-locale' 'haskell-readline' 'haskell-time' 'haskell-xml')
