pkgname=haskell-readline
pkgrel=1
pkgver=1.0.1.0
pkgdesc="An interface to the GNU readline library"
url="http://hackage.haskell.org/package/readline"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-process')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/readline/1.0.1.0/readline-1.0.1.0.tar.gz)
install=haskell-readline.install
md5sums=('eade9576def53ed293628a2f8580007e')
build() {
    cd ${srcdir}/readline-1.0.1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/readline
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
