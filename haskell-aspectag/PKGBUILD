pkgname=haskell-aspectag
pkgrel=2
pkgver=0.1.4
pkgdesc="Attribute Grammars in the form of an EDSL"
url="http://hackage.haskell.org/package/AspectAG"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hlist>=0.2' 'haskell-containers>=0.2.0.0' 'haskell-haskell98' 'haskell-mtl>=1.1.0.2' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/AspectAG/0.1.4/AspectAG-0.1.4.tar.gz)
install=haskell-aspectag.install
md5sums=('d8f9a4978af278e7fe07f2efec656e44')
build() {
    cd ${srcdir}/AspectAG-0.1.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/AspectAG
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
