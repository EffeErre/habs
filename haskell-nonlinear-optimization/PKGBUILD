pkgname=haskell-nonlinear-optimization
pkgrel=1
pkgver=0.3.3
pkgdesc="Various iterative algorithms for optimization of nonlinear functions."
url="http://hackage.haskell.org/package/nonlinear-optimization"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-primitive' 'haskell-vector')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/nonlinear-optimization/0.3.3/nonlinear-optimization-0.3.3.tar.gz)
install=haskell-nonlinear-optimization.install
md5sums=('1d839178c4c320cf618eee51fe0dc1a6')
build() {
    cd ${srcdir}/nonlinear-optimization-0.3.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/nonlinear-optimization
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
