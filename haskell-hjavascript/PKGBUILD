pkgname=haskell-hjavascript
pkgrel=1
pkgver=0.4.7
pkgdesc="HJavaScript is an abstract syntax for a typed subset of JavaScript."
url="http://hackage.haskell.org/package/HJavaScript"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-pretty>=1.0')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HJavaScript/0.4.7/HJavaScript-0.4.7.tar.gz)
install=haskell-hjavascript.install
md5sums=('6b926e4cfdeff9eb51bc043b523de46f')
build() {
    cd ${srcdir}/HJavaScript-0.4.7
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/HJavaScript
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
