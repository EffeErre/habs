pkgname=haskell-hdbc-postgresql
pkgrel=1
pkgver=2.2.3.1
pkgdesc="PostgreSQL driver for HDBC"
url="http://hackage.haskell.org/package/HDBC-postgresql"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hdbc>=2.2.0' 'haskell-bytestring' 'haskell-mtl' 'haskell-old-locale' 'haskell-old-time' 'haskell-parsec' 'haskell-time' 'haskell-utf8-string' 'postgresql')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HDBC-postgresql/2.2.3.1/HDBC-postgresql-2.2.3.1.tar.gz)
install=haskell-hdbc-postgresql.install
md5sums=('b46b06ddd62673dab558384f01c9b18b')
build() {
    cd ${srcdir}/HDBC-postgresql-2.2.3.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/HDBC-postgresql
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
