pkgdesc="a stupid cron"
url="http://hackage.haskell.org/package/bla"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-unix')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/bla/2009.10.20/bla-2009.10.20.tar.gz)
