pkgname=haskell-mohws
pkgrel=2
pkgver=0.2.0.1
pkgdesc="Modular Haskell Web Server"
url="http://hackage.haskell.org/package/mohws"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-http' 'haskell-bytestring' 'haskell-containers' 'haskell-data-accessor' 'haskell-directory' 'haskell-explicit-exception' 'haskell-filepath' 'haskell-html' 'haskell-network' 'haskell-old-locale' 'haskell-old-time' 'haskell-parsec' 'haskell-process' 'haskell-transformers' 'haskell-unix' 'haskell-utility-ht')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/mohws/0.2.0.1/mohws-0.2.0.1.tar.gz)
install=haskell-mohws.install
md5sums=('45ad19e7d12c227b579452fbb211bd7f')
build() {
    cd ${srcdir}/mohws-0.2.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/mohws
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
