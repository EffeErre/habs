pkgname=haskell-tv
pkgrel=1
pkgver=0.4.7
pkgdesc="Tangible Values -- composable interfaces"
url="http://hackage.haskell.org/package/TV"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-deeparrow>=0.3.1' 'haskell-typecompose>=0.6.7')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/TV/0.4.7/TV-0.4.7.tar.gz)
install=haskell-tv.install
md5sums=('166269e15afaf540a609a5f07d15ff87')
build() {
    cd ${srcdir}/TV-0.4.7
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/TV
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
