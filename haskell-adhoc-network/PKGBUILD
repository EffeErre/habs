makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-crypto>4' 'haskell-haxml>1.0' 'haskell-bytestring>0.9' 'haskell-containers' 'haskell-dataenc' 'haskell-hsgnutls>=0.2.3' 'haskell-network' 'haskell-old-locale' 'haskell-parsec' 'haskell-pkcs1>=1.0.2' 'haskell-random' 'haskell-time' 'haskell-utf8-string' 'haskell-xml-parsec>=1.0.2')
