pkgname=haskell-language-haskell-extract
pkgrel=1
pkgver=0.1.2
pkgdesc="Module to automatically extract functions from the local code."
url="http://hackage.haskell.org/package/language-haskell-extract"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell-src-exts' 'haskell-haskell98' 'haskell-regex-posix' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/language-haskell-extract/0.1.2/language-haskell-extract-0.1.2.tar.gz)
install=haskell-language-haskell-extract.install
md5sums=('016724a8c78127119c2f467670ab94e6')
build() {
    cd ${srcdir}/language-haskell-extract-0.1.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/language-haskell-extract
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 BSD3.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
