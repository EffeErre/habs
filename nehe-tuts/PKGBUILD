url="http://hackage.haskell.org/package/nehe-tuts"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-glut>=2.1.1.2' 'haskell-opengl>=2.2.1.1' 'haskell-array>=0.2.0.0' 'haskell-haskell98')
