pkgname=haskell-type
pkgrel=2
pkgver=0.1.0
pkgdesc="Dynamic casting library with support for arbitrary rank type kinds."
url="http://hackage.haskell.org/package/type"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/type/0.1.0/type-0.1.0.tar.gz)
install=haskell-type.install
md5sums=('38b70089de269afb0dbe9b88ca32b422')
build() {
    cd ${srcdir}/type-0.1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/type
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 license/BSD3 ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
