pkgdesc="A small program for counting the comments in haskell source"
url="http://hackage.haskell.org/package/happraise"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-directory' 'haskell-filepath')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/happraise/0.1/happraise-0.1.tar.gz)
