pkgname=haskell-polytypeable
pkgrel=2
pkgver=0.1.0.0
pkgdesc="Typeable for polymorphic types."
url="http://hackage.haskell.org/package/polytypeable"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/polytypeable/0.1.0.0/polytypeable-0.1.0.0.tar.gz)
install=haskell-polytypeable.install
md5sums=('790097b07d0d7c30b3251c17e49093eb')
build() {
    cd ${srcdir}/polytypeable-0.1.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/polytypeable
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
