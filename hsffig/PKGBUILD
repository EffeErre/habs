pkgname=hsffig
pkgrel=1
pkgver=1.1.3
pkgdesc="Generate FFI import declarations from C include files"
url="http://hackage.haskell.org/package/HSFFIG"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('gmp' 'ghc' 'haskell-cabal' 'haskell-cabal>=1.5' 'haskell-array' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-parsec<3' 'haskell-process' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HSFFIG/1.1.3/HSFFIG-1.1.3.tar.gz)
install=hsffig.install
md5sums=('a7d9f9e556220825c7f5ddbd249698aa')
build() {
    cd ${srcdir}/HSFFIG-1.1.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/HSFFIG
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 License.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
