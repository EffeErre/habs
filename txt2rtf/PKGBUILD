pkgname=txt2rtf
pkgrel=1
pkgver=1.0.1
pkgdesc="Filter to convert plain text files to RTF"
url="http://hackage.haskell.org/package/txt2rtf"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/txt2rtf/1.0.1/txt2rtf-1.0.1.tar.gz)
