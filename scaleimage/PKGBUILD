pkgver=0.1
pkgdesc="Scale an image to a new geometry"
url="http://hackage.haskell.org/package/scaleimage"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-filepath' 'haskell-gd')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/scaleimage/0.1/scaleimage-0.1.tar.gz)
