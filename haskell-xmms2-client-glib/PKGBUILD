pkgname=haskell-xmms2-client-glib
pkgrel=1
pkgver=0.0.5.0
pkgdesc="An XMMS2 client library \8212 GLib integration."
url="http://hackage.haskell.org/package/xmms2-client-glib"
license=('LGPL-3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-xmms2-client=0.0.5.0' 'c2hs')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/xmms2-client-glib/0.0.5.0/xmms2-client-glib-0.0.5.0.tar.gz)
install=haskell-xmms2-client-glib.install
md5sums=('438238b6a866458ae65af07b4e064451')
build() {
    cd ${srcdir}/xmms2-client-glib-0.0.5.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/xmms2-client-glib
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
