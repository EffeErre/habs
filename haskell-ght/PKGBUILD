pkgname=haskell-ght
pkgrel=1
pkgver=0.3.0
pkgdesc="Trivial routines for inspecting git repositories"
url="http://hackage.haskell.org/package/ght"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-sha' 'haskell-binary' 'haskell-bytestring' 'haskell-data-default' 'haskell-directory' 'haskell-filepath' 'haskell-old-locale' 'haskell-time' 'haskell-transformers' 'haskell-ui-command' 'haskell-unix' 'haskell-zlib')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ght/0.3.0/ght-0.3.0.tar.gz)
install=haskell-ght.install
md5sums=('3bb92b1167707a9408013354d08a1a36')
build() {
    cd ${srcdir}/ght-0.3.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/ght
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
