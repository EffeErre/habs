pkgname=printxosd
pkgrel=1
pkgver=0.1
pkgdesc="Simple tool to display some text on an on-screen display"
url="http://hackage.haskell.org/package/printxosd"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-xosd')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/printxosd/0.1/printxosd-0.1.tar.gz)
md5sums=('c040feec80371229a2493e926cba16f2')
build() {
    cd ${srcdir}/printxosd-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
