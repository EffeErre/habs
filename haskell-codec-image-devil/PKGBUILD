pkgname=haskell-codec-image-devil
pkgrel=1
pkgver=0.2.3
pkgdesc="An FFI interface to the DevIL library"
url="http://hackage.haskell.org/package/Codec-Image-DevIL"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'devil')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Codec-Image-DevIL/0.2.3/Codec-Image-DevIL-0.2.3.tar.gz)
install=haskell-codec-image-devil.install
md5sums=('a3baed6e22ac22b4d0bdd8b6adefa293')
build() {
    cd ${srcdir}/Codec-Image-DevIL-0.2.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Codec-Image-DevIL
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
