pkgname=haskell-tbox
pkgrel=1
pkgver=0.1.0
pkgdesc="Transactional variables and data structures with IO hooks"
url="http://hackage.haskell.org/package/tbox"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-ifelse' 'haskell-array' 'haskell-binary' 'haskell-cautious-file' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-monad-loops' 'haskell-mtl' 'haskell-random' 'haskell-safe-failure' 'haskell-stm-io-hooks')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/tbox/0.1.0/tbox-0.1.0.tar.gz)
install=haskell-tbox.install
md5sums=('d96c45cb8a23baea6189d394374af229')
build() {
    cd ${srcdir}/tbox-0.1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/tbox
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
