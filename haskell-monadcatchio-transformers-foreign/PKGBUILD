pkgname=haskell-monadcatchio-transformers-foreign
pkgrel=1
pkgver=0.1
pkgdesc="Polymorphic combinators for working with foreign functions"
url="http://hackage.haskell.org/package/MonadCatchIO-transformers-foreign"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-monadcatchio-transformers' 'haskell-primitive' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/MonadCatchIO-transformers-foreign/0.1/MonadCatchIO-transformers-foreign-0.1.tar.gz)
install=haskell-monadcatchio-transformers-foreign.install
