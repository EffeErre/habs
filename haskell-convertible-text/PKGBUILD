pkgname=haskell-convertible-text
pkgrel=1
pkgver=0.3.0.5
pkgdesc="Typeclasses and instances for converting between types"
url="http://hackage.haskell.org/package/convertible-text"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-attempt' 'haskell-bytestring' 'haskell-containers' 'haskell-old-time' 'haskell-template-haskell' 'haskell-text' 'haskell-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/convertible-text/0.3.0.5/convertible-text-0.3.0.5.tar.gz)
install=haskell-convertible-text.install
md5sums=('ba4ecf18cb7113df56862c001e9e9051')
build() {
    cd ${srcdir}/convertible-text-0.3.0.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/convertible-text
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
