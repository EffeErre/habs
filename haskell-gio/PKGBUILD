pkgname=haskell-gio
pkgrel=1
pkgver=0.11.1
pkgdesc="Binding to the GIO."
url="http://hackage.haskell.org/package/gio"
license=('LGPL-2.1')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-containers' 'haskell-glib' 'haskell-haskell98' 'haskell-mtl' 'gtk2hs-buildtools' 'gtk2hs-buildtools' 'gtk2hs-buildtools')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gio/0.11.1/gio-0.11.1.tar.gz)
install=haskell-gio.install
md5sums=('70fdc725f6b98d27862952f00193a860')
build() {
    cd ${srcdir}/gio-0.11.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/gio
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
