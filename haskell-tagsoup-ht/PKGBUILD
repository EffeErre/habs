pkgname=haskell-tagsoup-ht
pkgrel=2
pkgver=0.3
pkgdesc="alternative parser for the tagsoup package"
url="http://hackage.haskell.org/package/tagsoup-ht"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-containers' 'haskell-data-accessor' 'haskell-explicit-exception' 'haskell-old-time' 'haskell-tagsoup' 'haskell-transformers' 'haskell-utility-ht' 'haskell-xml-basic')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/tagsoup-ht/0.3/tagsoup-ht-0.3.tar.gz)
install=haskell-tagsoup-ht.install
md5sums=('bc625a6c3bddd46af51b6e63da02406b')
build() {
    cd ${srcdir}/tagsoup-ht-0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/tagsoup-ht
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
