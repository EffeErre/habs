pkgname=haskell-usb-id-database
pkgrel=1
pkgver=0.4.0.3
pkgdesc="A database of USB identifiers"
url="http://hackage.haskell.org/package/usb-id-database"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-base-unicode-symbols' 'haskell-bytestring' 'haskell-containers<0.4' 'haskell-containers-unicode-symbols<0.4' 'haskell-parsimony')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/usb-id-database/0.4.0.3/usb-id-database-0.4.0.3.tar.gz)
install=haskell-usb-id-database.install
md5sums=('051504f57b438bdf1f749a2ab19499c4')
build() {
    cd ${srcdir}/usb-id-database-0.4.0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/usb-id-database
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
