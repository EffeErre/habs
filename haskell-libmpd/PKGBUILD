pkgname=haskell-libmpd
pkgrel=1
pkgver=0.5.0
pkgdesc="An MPD client library."
url="http://hackage.haskell.org/package/libmpd"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-filepath' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-time' 'haskell-utf8-string')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/libmpd/0.5.0/libmpd-0.5.0.tar.gz)
install=haskell-libmpd.install
md5sums=('38771e38d93ed511340c3c171df3dd75')
build() {
    cd ${srcdir}/libmpd-0.5.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/libmpd
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
