pkgname=haskell-sessions
pkgrel=2
pkgver=2008.7.18
pkgdesc="Session Types for Haskell"
url="http://hackage.haskell.org/package/sessions"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-bytestring' 'haskell-containers' 'haskell-mtl' 'haskell-network')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/sessions/2008.7.18/sessions-2008.7.18.tar.gz)
install=haskell-sessions.install
md5sums=('58354039f123cdd155e074ec1139b4b6')
build() {
    cd ${srcdir}/sessions-2008.7.18
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/sessions
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
