url="http://hackage.haskell.org/package/fquery"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-directory' 'haskell-haskell98' 'haskell-parsec' 'haskell-process' 'haskell-regex-compat' 'haskell-unix')
depends=('gmp')
