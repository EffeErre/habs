pkgrel=2
pkgver=0.0.0
pkgdesc="Automatic gzip compression of responses."
url="http://hackage.haskell.org/package/hack-middleware-gzip"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hack>=2009.5.19' 'haskell-split>=0.1.1' 'haskell-zlib>=0.5')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hack-middleware-gzip/0.0.0/hack-middleware-gzip-0.0.0.tar.gz)
install=haskell-hack-middleware-gzip.install
