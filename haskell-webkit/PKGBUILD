pkgname=haskell-webkit
pkgrel=1
pkgver=0.11.2
pkgdesc="Binding to the Webkit library."
url="http://hackage.haskell.org/package/webkit"
license=('LGPL-2.1')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-cairo' 'haskell-containers' 'haskell-glib' 'haskell-gtk' 'haskell-haskell98' 'haskell-mtl' 'haskell-pango' 'libwebkit' 'gtk2hs-buildtools' 'gtk2hs-buildtools' 'gtk2hs-buildtools')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/webkit/0.11.2/webkit-0.11.2.tar.gz)
install=haskell-webkit.install
md5sums=('d62e2e83bdcbe5449306c77ea335c41f')
build() {
    cd ${srcdir}/webkit-0.11.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/webkit
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
