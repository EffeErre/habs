pkgrel=2
pkgver=0.8.3
pkgdesc="Mask nucleotide (EST) sequences in Fasta format"
url="http://hackage.haskell.org/package/rbr"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bio')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/rbr/0.8.3/rbr-0.8.3.tar.gz)
install=haskell-rbr.install
md5sums=('9290ca413e4c3a76a3f202c513a1dc7a')
build() {
    cd ${srcdir}/rbr-0.8.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/libraries/rbr
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
