pkgname=haskell-visual-graphrewrite
pkgrel=2
pkgver=0.3.2
pkgdesc="Visualize the graph-rewrite steps of a Haskell program"
url="http://hackage.haskell.org/package/visual-graphrewrite"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'gtk2hs' 'haskell-containers>=0.2.0.0' 'haskell-directory>=1.0.0.3' 'haskell-fgl>=5.4.2.2' 'haskell-haskell-src>=1.0.1.2' 'haskell-ipprint>=0.3' 'haskell-lazysmallcheck>=0.3' 'haskell-parallel>=1.1.0.1' 'haskell-pretty>=1.0.1.0' 'haskell-process>=1.0.1.1' 'haskell-strict-concurrency>=0.2.1' 'haskell-value-supply>=0.5')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/visual-graphrewrite/0.3.2/visual-graphrewrite-0.3.2.tar.gz)
install=haskell-visual-graphrewrite.install
