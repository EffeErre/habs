url="http://hackage.haskell.org/package/HRay"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'gtk2hs' 'haskell-array' 'haskell-directory')
depends=('gmp')
