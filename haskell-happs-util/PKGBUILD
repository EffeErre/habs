url="http://hackage.haskell.org/package/HAppS-Util"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-directory' 'haskell-hslogger>=1.0.2' 'haskell-mtl' 'haskell-old-time' 'haskell-process' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HAppS-Util/0.9.3/HAppS-Util-0.9.3.tar.gz)
