pkgname=haskell-liboleg
pkgrel=1
pkgver=2010.1.9.0
pkgdesc="An evolving collection of Oleg Kiselyov's Haskell modules"
url="http://hackage.haskell.org/package/liboleg"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cc-delcont' 'haskell-containers' 'haskell-mtl' 'haskell-template-haskell' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/liboleg/2010.1.9.0/liboleg-2010.1.9.0.tar.gz)
install=haskell-liboleg.install
md5sums=('d2b0c4cacbd005ecf3ab8eb4854bf09f')
build() {
    cd ${srcdir}/liboleg-2010.1.9.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/liboleg
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
