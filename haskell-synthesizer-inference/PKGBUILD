pkgrel=2
pkgver=0.2
pkgdesc="Audio signal processing with dynamic physical dimensions"
url="http://hackage.haskell.org/package/synthesizer-inference"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-uniquelogicnp' 'haskell-event-list' 'haskell-non-negative' 'haskell-numeric-prelude' 'haskell-random' 'haskell-synthesizer-core' 'haskell-transformers' 'haskell-utility-ht')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/synthesizer-inference/0.2/synthesizer-inference-0.2.tar.gz)
install=haskell-synthesizer-inference.install
