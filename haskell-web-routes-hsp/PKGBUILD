pkgname=haskell-web-routes-hsp
pkgrel=1
pkgver=0.21
pkgdesc="Adds XMLGenerator instance for RouteT monad"
url="http://hackage.haskell.org/package/web-routes-hsp"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hsp' 'haskell-hsx>=0.7.0' 'haskell-text' 'haskell-web-routes>=0.23')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/web-routes-hsp/0.21/web-routes-hsp-0.21.tar.gz)
install=haskell-web-routes-hsp.install
md5sums=('c2b71b35d8edf8e81779657d3865b95b')
build() {
    cd ${srcdir}/web-routes-hsp-0.21
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/web-routes-hsp
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
