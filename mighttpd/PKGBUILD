license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-c10k' 'haskell-directory' 'haskell-filepath' 'haskell-haskell98' 'haskell-hdaemonize' 'haskell-hslogger' 'haskell-network' 'haskell-parsec' 'haskell-time' 'haskell-unix' 'haskell-webserver')
