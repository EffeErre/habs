pkgdesc="ray tracer"
url="http://hackage.haskell.org/package/glome-hs"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-glut' 'haskell-glometrace' 'haskell-glomevec' 'haskell-opengl' 'haskell-array' 'haskell-haskell98' 'haskell-parallel>=2.2' 'haskell-random' 'haskell-time')
