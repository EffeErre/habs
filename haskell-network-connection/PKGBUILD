pkgname=haskell-network-connection
pkgrel=2
pkgver=0.1.1
pkgdesc="A wrapper around a generic stream-like connection"
url="http://hackage.haskell.org/package/network-connection"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring>=0.9' 'haskell-containers' 'haskell-network>=2.1' 'haskell-network-bytestring>=0.1.1.2' 'haskell-stm>=2.1')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/network-connection/0.1.1/network-connection-0.1.1.tar.gz)
install=haskell-network-connection.install
md5sums=('b1b9b4851e187aa1e69e2a169d5e39b1')
build() {
    cd ${srcdir}/network-connection-0.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/network-connection
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
