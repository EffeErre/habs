pkgname=haskell-jscontracts
pkgrel=2
pkgver=0.5.3
pkgdesc="Design-by-contract for JavaScript"
url="http://hackage.haskell.org/package/JsContracts"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-webbits=1.0' 'haskell-webbits-html=1.0.1' 'haskell-containers>=0.1' 'haskell-directory' 'haskell-filepath' 'haskell-mtl>=1.1.0.1' 'haskell-parsec<3.0.0' 'haskell-pretty>=0.1' 'haskell-syb>=0.1')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/JsContracts/0.5.3/JsContracts-0.5.3.tar.gz)
install=haskell-jscontracts.install
md5sums=('60601a873f33fd4f7248ba3e1cdd23b4')
build() {
    cd ${srcdir}/JsContracts-0.5.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/JsContracts
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
