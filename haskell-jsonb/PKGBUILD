pkgname=haskell-jsonb
pkgrel=1
pkgver=1.0.2
pkgdesc="JSON parser that uses byte strings."
url="http://hackage.haskell.org/package/JSONb"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-attoparsec' 'haskell-bytestring>=0.9' 'haskell-bytestring-nums>=0.3.1' 'haskell-bytestring-trie>=0.1.4' 'haskell-containers' 'haskell-utf8-string>=0.3')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/JSONb/1.0.2/JSONb-1.0.2.tar.gz)
install=haskell-jsonb.install
md5sums=('b8cd6a453485c9270287fc5396339fab')
build() {
    cd ${srcdir}/JSONb-1.0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/JSONb
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
