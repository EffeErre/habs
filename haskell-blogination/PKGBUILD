pkgname=haskell-blogination
pkgrel=2
pkgver=0.5
pkgdesc="Very simple static blog software"
url="http://hackage.haskell.org/package/blogination"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-configfile' 'haskell-directory' 'haskell-feed' 'haskell-filepath' 'haskell-haskell98' 'haskell-higherorder' 'haskell-highlighting-kate' 'haskell-mtl' 'haskell-old-locale' 'haskell-old-time' 'haskell-pandoc' 'haskell-regex-compat' 'haskell-time' 'haskell-utf8-string' 'haskell-xhtml' 'haskell-xml')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/blogination/0.5/blogination-0.5.tar.gz)
install=haskell-blogination.install
md5sums=('59b8256488e8621554257b8fe1edea23')
build() {
    cd ${srcdir}/blogination-0.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/blogination
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
