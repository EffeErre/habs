pkgname=haskell-approximate-equality
pkgrel=1
pkgver=1.0
pkgdesc="Newtype wrappers for approximate equality"
url="http://hackage.haskell.org/package/approximate-equality"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-type-level-natural-number')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/approximate-equality/1.0/approximate-equality-1.0.tar.gz)
install=haskell-approximate-equality.install
md5sums=('b07933e28bc5e3a05b1bf296f678f969')
build() {
    cd ${srcdir}/approximate-equality-1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/approximate-equality
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
