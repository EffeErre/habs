pkgver=0.1
pkgdesc="Create OpenSSL keypairs."
url="http://hackage.haskell.org/package/openssl-createkey"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hsopenssl' 'haskell-directory' 'haskell-time' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/openssl-createkey/0.1/openssl-createkey-0.1.tar.gz)
install=haskell-openssl-createkey.install
