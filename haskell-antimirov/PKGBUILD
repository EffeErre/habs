pkgname=haskell-antimirov
pkgrel=2
pkgver=0.1.0
pkgdesc="Define the language containment (=subtyping) relation on regulare expressions."
url="http://hackage.haskell.org/package/antimirov"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck' 'haskell-containers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/antimirov/0.1.0/antimirov-0.1.0.tar.gz)
install=haskell-antimirov.install
md5sums=('03bb1724b608c06d1632573ee52b7b8f')
build() {
    cd ${srcdir}/antimirov-0.1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/antimirov
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
