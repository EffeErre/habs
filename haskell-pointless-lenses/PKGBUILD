pkgname=haskell-pointless-lenses
pkgrel=1
pkgver=0.0.5
pkgdesc="Pointless Lenses library"
url="http://hackage.haskell.org/package/pointless-lenses"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-pointless-haskell>=0.0.2' 'haskell-process')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/pointless-lenses/0.0.5/pointless-lenses-0.0.5.tar.gz)
install=haskell-pointless-lenses.install
md5sums=('7b6d7ce8ac6eeb6c3563cb11e3ffdb7c')
build() {
    cd ${srcdir}/pointless-lenses-0.0.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/pointless-lenses
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
