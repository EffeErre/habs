pkgname=haskell-dyre
pkgrel=1
pkgver=0.8.5
pkgdesc="Dynamic reconfiguration in Haskell"
url="http://hackage.haskell.org/package/dyre"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-directory' 'haskell-executable-path' 'haskell-filepath' 'haskell-ghc-paths' 'haskell-io-storage' 'haskell-old-time' 'haskell-process' 'haskell-unix' 'haskell-xdg-basedir')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/dyre/0.8.5/dyre-0.8.5.tar.gz)
install=haskell-dyre.install
md5sums=('722fd5a99cb32def0a1e83ad59d54a16')
build() {
    cd ${srcdir}/dyre-0.8.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/dyre
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
