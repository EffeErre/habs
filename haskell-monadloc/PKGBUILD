pkgname=haskell-monadloc
pkgrel=1
pkgver=0.5
pkgdesc="A class for monads which can keep a monadic call trace"
url="http://hackage.haskell.org/package/monadloc"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell-src-exts>=1.3.0' 'haskell-mtl' 'haskell-pretty' 'haskell-syb' 'haskell-template-haskell' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/monadloc/0.5/monadloc-0.5.tar.gz)
install=haskell-monadloc.install
md5sums=('c3728fdde8a9b0e6259662a510beeb8f')
build() {
    cd ${srcdir}/monadloc-0.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/monadloc
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
