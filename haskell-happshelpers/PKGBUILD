pkgname=haskell-happshelpers
pkgrel=2
pkgver=0.10
pkgdesc="Convenience functions for HAppS."
url="http://hackage.haskell.org/package/HAppSHelpers"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-happs-data' 'haskell-happs-ixset' 'haskell-happs-server' 'haskell-happs-state' 'haskell-hstringtemplate' 'haskell-hstringtemplatehelpers' 'haskell-missingh' 'haskell-pbkdf2' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-haskell98' 'hscolour' 'haskell-mtl' 'haskell-old-time' 'haskell-parsec' 'haskell-puremd5' 'haskell-random' 'haskell-safe')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HAppSHelpers/0.10/HAppSHelpers-0.10.tar.gz)
install=haskell-happshelpers.install
md5sums=('d4d119ad4668c0466ddf6acae8df3083')
build() {
    cd ${srcdir}/HAppSHelpers-0.10
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/HAppSHelpers
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 bsd3.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
