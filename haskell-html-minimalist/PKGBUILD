pkgname=haskell-html-minimalist
pkgrel=1
pkgver=0.2
pkgdesc="Minimalist haskell html library"
url="http://hackage.haskell.org/package/html-minimalist"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-xml')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/html-minimalist/0.2/html-minimalist-0.2.tar.gz)
install=haskell-html-minimalist.install
md5sums=('bb7a3e33abf7611051529d4c327aaa38')
build() {
    cd ${srcdir}/html-minimalist-0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/html-minimalist
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
