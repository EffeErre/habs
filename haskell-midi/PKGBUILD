pkgname=haskell-midi
pkgrel=1
pkgver=0.1.5.2
pkgdesc="Handling of MIDI messages and files"
url="http://hackage.haskell.org/package/midi"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck' 'haskell-binary' 'haskell-bytestring' 'haskell-event-list' 'haskell-explicit-exception' 'haskell-monoid-transformer' 'haskell-non-negative' 'haskell-random' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/midi/0.1.5.2/midi-0.1.5.2.tar.gz)
install=haskell-midi.install
md5sums=('48d3e64aeae41ba73ca23e16e10f1ed2')
build() {
    cd ${srcdir}/midi-0.1.5.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/midi
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
