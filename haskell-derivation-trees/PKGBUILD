pkgname=haskell-derivation-trees
pkgrel=1
pkgver=0.7.2
pkgdesc="Typeset Derivation Trees via MetaPost"
url="http://hackage.haskell.org/package/derivation-trees"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-applicative-extras' 'haskell-labeled-tree' 'haskell-mtl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/derivation-trees/0.7.2/derivation-trees-0.7.2.tar.gz)
install=haskell-derivation-trees.install
md5sums=('7cf56dfa16c301dd34a38bdd30bd8ebb')
build() {
    cd ${srcdir}/derivation-trees-0.7.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/derivation-trees
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
