pkgname=haskell-colock
pkgrel=2
pkgver=0.2.2
pkgdesc="thread-friendly file locks that don't block the entire program"
url="http://hackage.haskell.org/package/colock"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/colock/0.2.2/colock-0.2.2.tar.gz)
install=haskell-colock.install
md5sums=('8dafadcb135c8b3c61eff2033109afee')
build() {
    cd ${srcdir}/colock-0.2.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/colock
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
