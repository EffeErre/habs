pkgname=haskell-pubsub
pkgrel=2
pkgver=0.11
pkgdesc="A library for Google/SixApart pubsub hub interaction"
url="http://hackage.haskell.org/package/pubsub"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-http>=4000.0.8' 'haskell-fastcgi' 'haskell-feed>=0.3.7' 'haskell-json' 'haskell-mime' 'haskell-network' 'haskell-random' 'haskell-utf8-string' 'haskell-xml')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/pubsub/0.11/pubsub-0.11.tar.gz)
install=haskell-pubsub.install
md5sums=('f4c357691c7d68ff5f7ce7f731cb77d7')
build() {
    cd ${srcdir}/pubsub-0.11
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/pubsub
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
