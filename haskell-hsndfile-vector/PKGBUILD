pkgname=haskell-hsndfile-vector
pkgrel=1
pkgver=0.4.0
pkgdesc="Haskell bindings for libsndfile (Data.Vector interface)."
url="http://hackage.haskell.org/package/hsndfile-vector"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hsndfile>=0.4' 'haskell-vector>=0.5')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hsndfile-vector/0.4.0/hsndfile-vector-0.4.0.tar.gz)
install=haskell-hsndfile-vector.install
md5sums=('50c2a4e3e13ecffbe5fab636a25c696d')
build() {
    cd ${srcdir}/hsndfile-vector-0.4.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/hsndfile-vector
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
