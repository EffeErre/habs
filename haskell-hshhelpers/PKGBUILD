pkgname=haskell-hshhelpers
pkgrel=2
pkgver=0.24
pkgdesc="Convenience functions that use HSH, instances for HSH."
url="http://hackage.haskell.org/package/HSHHelpers"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-debugtracehelpers' 'haskell-hsh' 'haskell-hstringtemplatehelpers' 'haskell-missingh>=1.0.3' 'haskell-bytestring' 'haskell-directory' 'haskell-filepath' 'haskell-mtl' 'haskell-regex-pcre' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/HSHHelpers/0.24/HSHHelpers-0.24.tar.gz)
install=haskell-hshhelpers.install
md5sums=('fbabaf3f022e5a7ed291f481f4d5462b')
build() {
    cd ${srcdir}/HSHHelpers-0.24
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/HSHHelpers
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
