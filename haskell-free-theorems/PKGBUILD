pkgver=0.3.1.2
pkgdesc="Automatic generation of free theorems."
url="http://hackage.haskell.org/package/free-theorems"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers>=0.1.0.1' 'haskell-haskell-src>=1.0' 'haskell-haskell-src-exts' 'haskell-mtl>=1.0' 'haskell-pretty>=1.0.0.0' 'haskell-syb>=0.1.0.0')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/free-theorems/0.3.1.2/free-theorems-0.3.1.2.tar.gz)
install=haskell-free-theorems.install
