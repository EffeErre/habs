pkgname=haskell-first-class-patterns
pkgrel=2
pkgver=0.2.0
pkgdesc="First class patterns and pattern matching, using type families"
url="http://hackage.haskell.org/package/first-class-patterns"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/first-class-patterns/0.2.0/first-class-patterns-0.2.0.tar.gz)
install=haskell-first-class-patterns.install
md5sums=('67a2ab8e4765d3a436c90868693b3c89')
build() {
    cd ${srcdir}/first-class-patterns-0.2.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/first-class-patterns
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
