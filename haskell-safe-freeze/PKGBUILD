pkgname=haskell-safe-freeze
pkgrel=2
pkgver=0.0
pkgdesc="Support for safely freezing multiple arrays in the ST monad."
url="http://hackage.haskell.org/package/safe-freeze"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-category-extras' 'haskell-transformers<0.2' 'haskell-uvector')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/safe-freeze/0.0/safe-freeze-0.0.tar.gz)
install=haskell-safe-freeze.install
md5sums=('6ab282092cf607b6e80da0e67a154834')
build() {
    cd ${srcdir}/safe-freeze-0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/safe-freeze
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
