url="http://hackage.haskell.org/package/lambdabot-utils"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-bytestring' 'haskell-containers' 'haskell-haskell-src' 'haskell-mtl' 'haskell-network' 'haskell-old-time' 'haskell-process' 'haskell-random' 'haskell-regex-compat' 'haskell-regex-posix' 'haskell-tagsoup' 'haskell-unix' 'haskell-utf8-string' 'haskell-zlib')
