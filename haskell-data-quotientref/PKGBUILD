pkgdesc="Reference cells that need two independent indices to be accessed."
url="http://hackage.haskell.org/package/data-quotientref"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/data-quotientref/0.1/data-quotientref-0.1.tar.gz)
