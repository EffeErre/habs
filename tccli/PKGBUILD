url="http://hackage.haskell.org/package/tccli"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-bytestring>=0.9' 'haskell-tokyocabinet-haskell' 'haskell-utf8-string')
