pkgname=haskell-thrift
pkgrel=1
pkgver=0.1.1.1
pkgdesc="Thrift library package"
url="http://hackage.haskell.org/package/Thrift"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-http' 'haskell-binary' 'haskell-bytestring' 'haskell-network')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Thrift/0.1.1.1/Thrift-0.1.1.1.tar.gz)
install=haskell-thrift.install
md5sums=('754e6a5331a93d19fadd427f1147b001')
build() {
    cd ${srcdir}/Thrift-0.1.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Thrift
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
