pkgdesc="a distributed MapReduce framework"
url="http://hackage.haskell.org/package/Holumbus-MapReduce"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-holumbus-distribution' 'haskell-holumbus-storage' 'haskell-binary>=0.4' 'haskell-bytestring>=0.9' 'haskell-containers>=0.1' 'haskell-directory>=1.0' 'haskell-extensible-exceptions' 'haskell-haskell98>=1' 'haskell-hslogger>=1.0' 'haskell-hxt>=8.2' 'haskell-network>=2.1' 'haskell-parallel>=1.1.0.0' 'haskell-readline>=1.0' 'haskell-time>=1.1' 'haskell-unix>=2.3')
