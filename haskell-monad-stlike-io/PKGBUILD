pkgname=haskell-monad-stlike-io
pkgrel=1
pkgver=0.2.1
pkgdesc="ST-like monad capturing variables to regions and supporting IO."
url="http://hackage.haskell.org/package/monad-stlike-io"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-containers' 'haskell-deepseq' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/monad-stlike-io/0.2.1/monad-stlike-io-0.2.1.tar.gz)
install=haskell-monad-stlike-io.install
md5sums=('45c18f4c3edfbd96a74904065ff99c90')
build() {
    cd ${srcdir}/monad-stlike-io-0.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/monad-stlike-io
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 COPYING ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
