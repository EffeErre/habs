makedepends=('ghc' 'haskell-cabal' 'haskell-hfuse>=0.2.1' 'haskell-bytestring>=0.9' 'haskell-directory>=1' 'haskell-filepath>=1.1' 'haskell-haskell98' 'haskell-unix>=2.3')
