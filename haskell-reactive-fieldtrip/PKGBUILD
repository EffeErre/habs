pkgname=haskell-reactive-fieldtrip
pkgrel=1
pkgver=0.0.9
pkgdesc="Connect Reactive and FieldTrip"
url="http://hackage.haskell.org/package/reactive-fieldtrip"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-fieldtrip>=0.2.1' 'haskell-infixapplicative' 'haskell-reactive>=0.10.2' 'haskell-reactive-glut>=0.0.4' 'haskell-unamb' 'haskell-vector-space')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/reactive-fieldtrip/0.0.9/reactive-fieldtrip-0.0.9.tar.gz)
install=haskell-reactive-fieldtrip.install
