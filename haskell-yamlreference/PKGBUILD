pkgname=haskell-yamlreference
pkgrel=2
pkgver=0.9.3
pkgdesc="YAML reference implementation"
url="http://hackage.haskell.org/package/YamlReference"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hunit>=1.1' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-dlist>=0.2' 'haskell-regex-compat>=0.71')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/YamlReference/0.9.3/YamlReference-0.9.3.tar.gz)
install=haskell-yamlreference.install
md5sums=('ddf06ca0d51f2386e7bd3e95f095b1e8')
build() {
    cd ${srcdir}/YamlReference-0.9.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/YamlReference
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
