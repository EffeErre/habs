# Maintainer: Arch Haskell Team <arch-haskell@haskell.org>
_hkgname=yesod
pkgname=haskell-yesod
pkgver=0.5.4.1
pkgrel=1
pkgdesc="Creation of type-safe, RESTful web applications."
url="http://hackage.haskell.org/package/${_hkgname}"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-monadcatchio-transformers<0.3' 'haskell-authenticate<0.8' 'haskell-blaze-builder<0.2' 'haskell-bytestring<0.10' 'haskell-cereal<0.4' 'haskell-clientsession<0.5' 'haskell-control-monad-attempt<0.4' 'haskell-data-object<0.4' 'haskell-dataenc<0.14' 'haskell-directory<1.2' 'haskell-email-validate<0.3' 'haskell-hamlet<0.6' 'haskell-neither<0.1' 'haskell-network<2.3' 'haskell-old-locale<1.1' 'haskell-parsec<4' 'haskell-persistent<0.3' 'haskell-process<1.1' 'haskell-puremd5<2.2' 'haskell-random<1.1' 'haskell-template-haskell<2.6' 'haskell-text<0.10' 'haskell-time<1.3' 'haskell-transformers<0.3' 'haskell-utf8-string<0.4' 'haskell-wai<0.3' 'haskell-wai-extra<0.3' 'haskell-web-routes<0.24' 'haskell-web-routes-quasi<0.7' 'haskell-xss-sanitize<0.3')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
install=${pkgname}.install
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O --enable-split-objs
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
    sed -i -r -e "s|ghc-pkg.*unregister[^ ]* |&'--force' |" unregister.sh
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/${pkgname}/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/${pkgname}/unregister.sh
    install -d -m755 ${pkgdir}/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/${_hkgname}
    runhaskell Setup copy --destdir=${pkgdir}
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
md5sums=('77d60082715b5670f6fccb49473b5c4c')
