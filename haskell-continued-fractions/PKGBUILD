pkgname=haskell-continued-fractions
pkgrel=1
pkgver=0.9.1.0
pkgdesc="Continued fractions."
url="http://hackage.haskell.org/package/continued-fractions"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/continued-fractions/0.9.1.0/continued-fractions-0.9.1.0.tar.gz)
install=haskell-continued-fractions.install
md5sums=('2bbd636688697348f4017ce02a6d08c9')
build() {
    cd ${srcdir}/continued-fractions-0.9.1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/continued-fractions
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
