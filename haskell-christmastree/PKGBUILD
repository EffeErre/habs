pkgname=haskell-christmastree
pkgrel=1
pkgver=0.2.1
pkgdesc="Alternative approach of 'read' that composes grammars instead of parsers."
url="http://hackage.haskell.org/package/ChristmasTree"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-tttas>=0.4' 'haskell-containers' 'haskell-fgl=5.4.2.2' 'haskell-haskell98' 'haskell-template-haskell>=2.4' 'haskell-uulib>=0.9.11')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ChristmasTree/0.2.1/ChristmasTree-0.2.1.tar.gz)
install=haskell-christmastree.install
md5sums=('1a2c0ce51c8f560c27ea7495000e9c2b')
build() {
    cd ${srcdir}/ChristmasTree-0.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/ChristmasTree
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
