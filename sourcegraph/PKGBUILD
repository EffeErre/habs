# Maintainer: Arch Haskell Team <arch-haskell@haskell.org>
_hkgname=SourceGraph
pkgname=sourcegraph
pkgver=0.6.1.1
pkgrel=2
pkgdesc="Static code analysis using graph-theoretic techniques."
url="http://hackage.haskell.org/package/${_hkgname}"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal=1.8.0.6' 'haskell-graphalyze<0.11.0.0' 'haskell-containers=0.3.0.0' 'haskell-directory=1.0.1.1' 'haskell-extensible-exceptions=0.1.1.1' 'haskell-fgl=5.4.2.3' 'haskell-filepath=1.1.0.4' 'haskell-graphviz<2999.11.0.0' 'haskell-haskell-src-exts<1.10.0' 'haskell-mtl' 'haskell-multiset' 'haskell-random=1.0.0.2')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
    runhaskell Setup build
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
md5sums=('1f0281fb80da2092532d2661ecedb604')
