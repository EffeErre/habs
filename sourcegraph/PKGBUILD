# Maintainer: Arch Haskell Team <arch-haskell@haskell.org>
_hkgname=SourceGraph
pkgname=sourcegraph
pkgver=0.6.0.2
pkgrel=2
pkgdesc="Static code analysis using graph-theoretic techniques."
url="http://hackage.haskell.org/package/${_hkgname}"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal<1.9' 'haskell-graphalyze<0.10.0.0' 'haskell-containers' 'haskell-directory' 'haskell-extensible-exceptions' 'haskell-fgl' 'haskell-filepath' 'haskell-graphviz<2999.9.0.0' 'haskell-haskell-src-exts<1.7.0' 'haskell-mtl' 'haskell-multiset' 'haskell-random')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
    runhaskell Setup build
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
md5sums=('e7924a7df308dbf27b1e6b475491944a')
