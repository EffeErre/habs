pkgname=haskell-poppler
pkgrel=1
pkgver=0.11.1
pkgdesc="Binding to the Poppler."
url="http://hackage.haskell.org/package/poppler"
license=('GPL-2')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-cairo' 'haskell-containers' 'haskell-glib' 'haskell-gtk' 'haskell-haskell98' 'haskell-mtl' 'poppler' 'glib2' 'cairo' 'gtk' 'gdk-pixbuf' 'pango' 'gtk2hs-buildtools' 'gtk2hs-buildtools' 'gtk2hs-buildtools')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/poppler/0.11.1/poppler-0.11.1.tar.gz)
install=haskell-poppler.install
md5sums=('2fbfd3f4eb64d3c61c3f5890a447af81')
build() {
    cd ${srcdir}/poppler-0.11.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/poppler
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
