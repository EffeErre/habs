pkgname=haskell-theora
pkgrel=2
pkgver=1.0
pkgdesc="Video Compression Library (see http://theora.org)"
url="http://hackage.haskell.org/package/Theora"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'libogg' 'libtheora')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Theora/1.0/Theora-1.0.tar.gz)
install=haskell-theora.install
md5sums=('c4af8c7314b9da4eb1f5199f671779bf')
build() {
    cd ${srcdir}/Theora-1.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Theora
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
