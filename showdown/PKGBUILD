pkgrel=2
pkgver=0.5.3
pkgdesc="A simple gtk based Russian Roulette game."
url="http://hackage.haskell.org/package/showdown"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'gtk2hs' 'haskell-random')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/showdown/0.5.3/showdown-0.5.3.tar.gz)
