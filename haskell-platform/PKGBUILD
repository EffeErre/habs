arch=('i686' 'x86_64')
makedepends=()
depends=('gmp' 'ghc' 'haskell-cabal' 'haskell-glut=2.1.2.1' 'haskell-http=4000.0.9' 'haskell-hunit=1.2.2.1' 'haskell-opengl=2.2.3.0' 'haskell-quickcheck=2.1.0.3' 'haskell-cgi=3001.1.7.2' 'haskell-deepseq=1.1.0.0' 'haskell-fgl=5.4.2.2' 'haskell-haskell-src=1.0.1.3' 'haskell-html=1.0.1.2' 'haskell-mtl=1.1.0.2' 'haskell-network=2.2.1.7' 'haskell-parallel=2.2.0.1' 'haskell-parsec=2.1.0.1' 'haskell-regex-base=0.93.1' 'haskell-regex-compat=0.92' 'haskell-regex-posix=0.94.1' 'haskell-stm=2.1.1.2' 'haskell-xhtml=3000.2.0.1' 'haskell-zlib=0.5.2.0' 'cabal-install=0.8.0' 'alex' 'happy=1.18.4')
