pkgname=haskell-bio
pkgrel=2
pkgver=0.4
pkgdesc="A bioinformatics library"
url="http://hackage.haskell.org/package/bio"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck<2' 'haskell-array' 'haskell-binary' 'haskell-bytestring>=0.9.1' 'haskell-containers' 'haskell-mtl' 'haskell-old-time' 'haskell-parallel' 'haskell-parsec' 'haskell-random' 'haskell-tagsoup>=0.4')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/bio/0.4/bio-0.4.tar.gz)
install=haskell-bio.install
md5sums=('339b6d5a14a04a4049c99e08892d8d25')
build() {
    cd ${srcdir}/bio-0.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/bio
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
