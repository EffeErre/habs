pkgname=haskell-parse-dimacs
pkgrel=2
pkgver=1.2
pkgdesc="DIMACS CNF parser library"
url="http://hackage.haskell.org/package/parse-dimacs"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-parsec>=3')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/parse-dimacs/1.2/parse-dimacs-1.2.tar.gz)
install=haskell-parse-dimacs.install
md5sums=('2a3bd8f6b0dd638567c172ef16e3e191')
build() {
    cd ${srcdir}/parse-dimacs-1.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/parse-dimacs
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
