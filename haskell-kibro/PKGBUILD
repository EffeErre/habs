pkgname=haskell-kibro
pkgrel=1
pkgver=0.4.3
pkgdesc="Web development framework."
url="http://hackage.haskell.org/package/kibro"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-configfile' 'haskell-cgi' 'haskell-containers' 'haskell-data-default' 'haskell-directory' 'haskell-fastcgi' 'haskell-filepath' 'haskell-haskell98' 'haskell-mtl' 'haskell-process' 'haskell-random' 'haskell-regex-compat' 'haskell-regexpr' 'haskell-safe' 'haskell-strict' 'haskell-unix' 'haskell-xhtml')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/kibro/0.4.3/kibro-0.4.3.tar.gz)
install=haskell-kibro.install
md5sums=('b42eaab79c4792ce74149526d3cfb26a')
build() {
    cd ${srcdir}/kibro-0.4.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/kibro
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
