makedepends=()
depends=('gmp' 'ghc' 'haskell-cabal' 'haskell-cabal>=1.2' 'haskell-chunks>=2007.4.18' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-hinstaller>=2007.5.13' 'haskell-old-locale' 'haskell-parsec' 'haskell-pretty' 'haskell-process' 'haskell-template-haskell' 'haskell-time' 'haskell-xhtml')
