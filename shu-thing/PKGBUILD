url="http://hackage.haskell.org/package/Shu-thing"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-glut')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Shu-thing/1.1.2/Shu-thing-1.1.2.tar.gz)
