pkgname=haskell-obj
pkgrel=2
pkgver=0.1.2
pkgdesc="Reads and writes obj models."
url="http://hackage.haskell.org/package/obj"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-codec-image-devil>=0.1' 'haskell-infixapplicative>=1.0' 'haskell-opengl>=2.2' 'haskell-openglcheck>=0.1' 'haskell-quickcheck>=1.1' 'haskell-array>=0.1' 'haskell-binary>=0.4.2' 'haskell-bytestring>=0.9' 'haskell-checkers>=0.1.1' 'haskell-containers>=0.1' 'haskell-directory>=1.0' 'haskell-filepath>=1.1' 'haskell-graphicsformats>=0.1' 'haskell-haskell98>=1.0')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/obj/0.1.2/obj-0.1.2.tar.gz)
install=haskell-obj.install
md5sums=('0e7fd75df3e794d2a877859c5aad4785')
build() {
    cd ${srcdir}/obj-0.1.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/obj
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
