pkgname=hsbackup
pkgrel=1
pkgver=0.1.1
pkgdesc="simple utility for rolling filesystem backups"
url="http://hackage.haskell.org/package/hsbackup"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-cmdargs' 'haskell-directory' 'haskell-filepath' 'haskell-hashed-storage' 'haskell-old-locale' 'haskell-strict' 'haskell-time')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hsbackup/0.1.1/hsbackup-0.1.1.tar.gz)
