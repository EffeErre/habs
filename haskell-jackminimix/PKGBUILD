pkgname=haskell-jackminimix
pkgrel=1
pkgver=0.1
pkgdesc="control JackMiniMix"
url="http://hackage.haskell.org/package/jackminimix"
license=('GPL-3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hosc')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/jackminimix/0.1/jackminimix-0.1.tar.gz)
install=haskell-jackminimix.install
md5sums=('fa8a3076458dd39606240d613b61c844')
build() {
    cd ${srcdir}/jackminimix-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/jackminimix
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
