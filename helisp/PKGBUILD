license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-mtl' 'haskell-parsec' 'haskell-process')
depends=('gmp')
options=('strip')
