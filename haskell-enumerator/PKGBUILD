pkgname=haskell-enumerator
pkgrel=1
pkgver=0.4.1
pkgdesc="Implementation of Oleg Kiselyov's left-fold enumerators"
url="http://hackage.haskell.org/package/enumerator"
license=('custom:MIT')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-monadcatchio-transformers' 'haskell-bytestring' 'haskell-text' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/enumerator/0.4.1/enumerator-0.4.1.tar.gz)
install=haskell-enumerator.install
md5sums=('46c3efa351d8c88da3b3448403bb2cd3')
build() {
    cd ${srcdir}/enumerator-0.4.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/enumerator
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 license.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
