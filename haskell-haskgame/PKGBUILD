pkgname=haskell-haskgame
pkgrel=2
pkgver=0.0.6
pkgdesc="Haskell game library."
url="http://hackage.haskell.org/package/haskgame"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-sdl' 'haskell-sdl-ttf>=0.5.5' 'haskell-containers' 'haskell-haskell98')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/haskgame/0.0.6/haskgame-0.0.6.tar.gz)
install=haskell-haskgame.install
md5sums=('fda299f3e7212c8970747e019179f5db')
build() {
    cd ${srcdir}/haskgame-0.0.6
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/haskgame
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
