pkgname=haskell-persistent-map
pkgrel=2
pkgver=0.3.5
pkgdesc="A thread-safe (STM) persistency interface for finite map types."
url="http://hackage.haskell.org/package/persistent-map"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-edisonapi' 'haskell-edisoncore' 'haskell-lru' 'haskell-binary' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-mtl' 'haskell-stm-io-hooks')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/persistent-map/0.3.5/persistent-map-0.3.5.tar.gz)
install=haskell-persistent-map.install
md5sums=('830660cee6ee095ebe81019d9876ca7d')
build() {
    cd ${srcdir}/persistent-map-0.3.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/persistent-map
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
