pkgname=haskell-repr
pkgrel=1
pkgver=0.3.2.1
pkgdesc="Render overloaded expressions to their textual representation."
url="http://hackage.haskell.org/package/repr"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-base-unicode-symbols' 'haskell-dstring' 'haskell-random' 'haskell-string-combinators' 'haskell-to-string-class')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/repr/0.3.2.1/repr-0.3.2.1.tar.gz)
install=haskell-repr.install
md5sums=('4e7b959f094506a575481702b03af1a6')
build() {
    cd ${srcdir}/repr-0.3.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/repr
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
