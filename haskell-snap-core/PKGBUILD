pkgname=haskell-snap-core
pkgrel=1
pkgver=0.2.11
pkgdesc="Snap: A Haskell Web Framework (Core)"
url="http://hackage.haskell.org/package/snap-core"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-listlike' 'haskell-monadcatchio-transformers' 'haskell-attoparsec' 'haskell-bytestring' 'haskell-bytestring-mmap' 'haskell-bytestring-nums' 'haskell-cereal' 'haskell-containers' 'haskell-directory' 'haskell-directory-tree' 'haskell-dlist' 'haskell-filepath' 'haskell-haskell98' 'haskell-iteratee' 'haskell-monads-fd' 'haskell-old-locale' 'haskell-old-time' 'haskell-template-haskell' 'haskell-text' 'haskell-time' 'haskell-transformers' 'haskell-unix-compat' 'haskell-zlib')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/snap-core/0.2.11/snap-core-0.2.11.tar.gz)
install=haskell-snap-core.install
md5sums=('ec9450d9ed435b892fa0291b7d5020a4')
build() {
    cd ${srcdir}/snap-core-0.2.11
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/snap-core
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
