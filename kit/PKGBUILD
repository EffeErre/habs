makedepends=('ghc' 'haskell-cabal' 'haskell-glob>=0.5' 'haskell-http>=4000.0.9' 'haskell-missingh' 'haskell-quickcheck' 'haskell-bytestring' 'haskell-cmdargs>=0.3' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-json' 'haskell-mtl' 'haskell-network' 'haskell-process')
