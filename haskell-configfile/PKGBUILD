pkgname=haskell-configfile
pkgrel=1
pkgver=1.0.6
pkgdesc="Configuration file reading & writing"
url="http://hackage.haskell.org/package/ConfigFile"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-missingh>=1.0.0' 'haskell-containers' 'haskell-haskell98' 'haskell-mtl' 'haskell-parsec')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ConfigFile/1.0.6/ConfigFile-1.0.6.tar.gz)
install=haskell-configfile.install
md5sums=('fbdef31a2989723cc25ba92622ff0e42')
build() {
    cd ${srcdir}/ConfigFile-1.0.6
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/ConfigFile
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
