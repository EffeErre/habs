pkgname=haskell-direct-fastcgi
pkgrel=1
pkgver=1.0.1.1
pkgdesc="Native implementation of the FastCGI protocol."
url="http://hackage.haskell.org/package/direct-fastcgi"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-containers' 'haskell-mtl' 'haskell-network' 'haskell-network-bytestring' 'haskell-utf8-string')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/direct-fastcgi/1.0.1.1/direct-fastcgi-1.0.1.1.tar.gz)
install=haskell-direct-fastcgi.install
md5sums=('0b2ca9720d1b1832e9df196ed654bd38')
build() {
    cd ${srcdir}/direct-fastcgi-1.0.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/direct-fastcgi
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
