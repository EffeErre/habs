pkgname=haskell-web-routes-transformers
pkgrel=1
pkgver=0.19
pkgdesc="Extends web-routes with some transformers instances for RouteT"
url="http://hackage.haskell.org/package/web-routes-transformers"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-transformers' 'haskell-web-routes>=0.18')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/web-routes-transformers/0.19/web-routes-transformers-0.19.tar.gz)
install=haskell-web-routes-transformers.install
md5sums=('d3f5458a2cbf6c7f8745d988758d65d4')
build() {
    cd ${srcdir}/web-routes-transformers-0.19
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/web-routes-transformers
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
