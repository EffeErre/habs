pkgver=0.1.0
pkgdesc="intra- and inter-program communication"
url="http://hackage.haskell.org/package/Holumbus-Distribution"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array>=0.2.0.0' 'haskell-binary>=0.4' 'haskell-bytestring>=0.9' 'haskell-containers>=0.1' 'haskell-haskell98>=1' 'haskell-hslogger>=1.0' 'haskell-hxt>=8.2' 'haskell-network>=2.1' 'haskell-parallel>=1.1.0.0' 'haskell-random>=1.0' 'haskell-readline>=1.0' 'haskell-stm>=2.1.1.2' 'haskell-time>=1.1' 'haskell-unix>=2.3')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Holumbus-Distribution/0.1.0/Holumbus-Distribution-0.1.0.tar.gz)
install=haskell-holumbus-distribution.install
