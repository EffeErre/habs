pkgrel=2
pkgver=2.30.2
pkgdesc="The Gofer 2.30 standard prelude"
url="http://hackage.haskell.org/package/gofer-prelude"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gofer-prelude/2.30.2/gofer-prelude-2.30.2.tar.gz)
install=haskell-gofer-prelude.install
