pkgname=haskell-asn1
pkgrel=2
pkgver=0.0.1.1
pkgdesc="ASN.1 support for Haskell"
url="http://hackage.haskell.org/package/ASN1"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hunit' 'haskell-newbinary' 'haskell-quickcheck' 'haskell-containers' 'haskell-mtl' 'haskell-old-time' 'haskell-pretty')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ASN1/0.0.1.1/ASN1-0.0.1.1.tar.gz)
install=haskell-asn1.install
md5sums=('3f1d4ef3bdf075f6d47540f3eae617e8')
build() {
    cd ${srcdir}/ASN1-0.0.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/ASN1
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
