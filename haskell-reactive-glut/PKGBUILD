pkgname=haskell-reactive-glut
pkgrel=2
pkgver=0.1.9
pkgdesc="Connects Reactive and GLUT"
url="http://hackage.haskell.org/package/reactive-glut"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-glut' 'haskell-opengl' 'haskell-old-time' 'haskell-reactive>=0.10.7' 'haskell-vector-space')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/reactive-glut/0.1.9/reactive-glut-0.1.9.tar.gz)
install=haskell-reactive-glut.install
md5sums=('1f311e6390b5f7d376d59f3babdcea50')
build() {
    cd ${srcdir}/reactive-glut-0.1.9
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/reactive-glut
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
