makedepends=()
depends=('ghc' 'haskell-cabal' 'gtk2hs' 'haskell-crypto' 'haskell-haxml>=1.17' 'haskell-adhoc-network>=1.0.2' 'haskell-array' 'haskell-bytestring>0.9' 'haskell-containers' 'haskell-dataenc' 'haskell-directory' 'haskell-filepath>=1.0' 'haskell-heap>=0.2' 'haskell-hsgnutls>=0.2.3' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-parsec>=2.0' 'haskell-pkcs1>=1.0.2' 'haskell-random' 'haskell-regex-compat' 'haskell-stm>=2.0' 'haskell-time' 'haskell-unix' 'haskell-utf8-string' 'haskell-xml-parsec>=1.0.2')
