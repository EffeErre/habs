pkgrel=2
pkgver=0.5.0.1
pkgdesc="polynomial function enclosures (PFEs) approximating exact real functions"
url="http://hackage.haskell.org/package/AERN-RnToRm"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-aern-real' 'haskell-quickcheck' 'haskell-binary>=0.4' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-html>=1.0' 'haskell-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/AERN-RnToRm/0.5.0.1/AERN-RnToRm-0.5.0.1.tar.gz)
install=haskell-aern-rntorm.install
