pkgname=haskell-haskore-supercollider
pkgrel=2
pkgver=0.1.1
pkgdesc="Haskore back-end for SuperCollider"
url="http://hackage.haskell.org/package/haskore-supercollider"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-containers' 'haskell-data-accessor' 'haskell-event-list' 'haskell-haskore' 'haskell-haskore-realtime' 'haskell-hosc' 'haskell-hsc3' 'haskell-non-negative' 'haskell-opensoundcontrol-ht' 'haskell-process' 'haskell-random' 'haskell-supercollider-ht' 'haskell-transformers' 'haskell-unix' 'haskell-utility-ht')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/haskore-supercollider/0.1.1/haskore-supercollider-0.1.1.tar.gz)
install=haskell-haskore-supercollider.install
md5sums=('f6a36647f946f1681be26805f5e23300')
build() {
    cd ${srcdir}/haskore-supercollider-0.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/haskore-supercollider
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
