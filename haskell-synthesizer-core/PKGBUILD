pkgdesc="Audio signal processing coded in Haskell: Low level part"
url="http://hackage.haskell.org/package/synthesizer-core"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck' 'haskell-array' 'haskell-binary' 'haskell-bytestring' 'haskell-containers' 'haskell-event-list' 'haskell-filepath' 'haskell-non-negative' 'haskell-numeric-prelude' 'haskell-numeric-quest' 'haskell-process' 'haskell-random' 'haskell-sample-frame-np' 'haskell-sox' 'haskell-storable-record' 'haskell-storable-tuple' 'haskell-storablevector' 'haskell-transformers' 'haskell-utility-ht')
