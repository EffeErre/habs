pkgname=haskell-missingpy
pkgrel=2
pkgver=0.10.3
pkgdesc="Haskell interface to Python"
url="http://hackage.haskell.org/package/MissingPy"
license=('custom:MIT')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-missingh>=1.0.1' 'haskell-anydbm>=1.0.5')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/MissingPy/0.10.3/MissingPy-0.10.3.tar.gz)
install=haskell-missingpy.install
md5sums=('c143bac3cb2a0c3ad28cdd476a0daf25')
build() {
    cd ${srcdir}/MissingPy-0.10.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/MissingPy
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 COPYRIGHT ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
