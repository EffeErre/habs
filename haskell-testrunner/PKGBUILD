pkgname=haskell-testrunner
pkgrel=2
pkgver=0.9
pkgdesc="Easy unit test driver framework"
url="http://hackage.haskell.org/package/testrunner"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hunit' 'haskell-quickcheck>=2.1' 'haskell-random' 'haskell-regex-compat' 'haskell-stm')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/testrunner/0.9/testrunner-0.9.tar.gz)
install=haskell-testrunner.install
md5sums=('4a15b927878d2b4480fef55c775fcda5')
build() {
    cd ${srcdir}/testrunner-0.9
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/testrunner
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
