pkgname=haskell-show
pkgrel=2
pkgver=0.3.4
pkgdesc="'Show' instances for Lambdabot"
url="http://hackage.haskell.org/package/show"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck<2' 'haskell-random' 'haskell-smallcheck>=0.4' 'haskell-syb')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/show/0.3.4/show-0.3.4.tar.gz)
install=haskell-show.install
md5sums=('cd95f8c63f8fa3d20063a5c0617df42f')
build() {
    cd ${srcdir}/show-0.3.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/show
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
