pkgrel=1
pkgver=1.0.0.0
pkgdesc="Useful standard collections types and related functions."
url="http://hackage.haskell.org/package/collections-base-instances"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-collections-api' 'haskell-containers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/collections-base-instances/1.0.0.0/collections-base-instances-1.0.0.0.tar.gz)
install=haskell-collections-base-instances.install
