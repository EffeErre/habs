pkgrel=2
pkgver=2007.4.18
pkgdesc="Simple template library with static safety"
url="http://hackage.haskell.org/package/chunks"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-parsec' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/chunks/2007.4.18/chunks-2007.4.18.tar.gz)
install=haskell-chunks.install
md5sums=('783cd887026c2a096aac448ce8bd714b')
build() {
    cd ${srcdir}/chunks-2007.4.18
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/chunks
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
