depends=('ghc' 'haskell-cabal' 'haskell-smtpclient' 'haskell-array' 'haskell-bytestring' 'haskell-directory' 'haskell-extensible-exceptions' 'haskell-filepath' 'haskell-hslogger>=1.0.2' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-old-time' 'haskell-parsec<4' 'haskell-process' 'haskell-random' 'haskell-strict-concurrency' 'haskell-template-haskell' 'haskell-time' 'haskell-unix' 'haskell-unix-compat')
