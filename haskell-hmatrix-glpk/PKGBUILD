pkgname=haskell-hmatrix-glpk
pkgrel=1
pkgver=0.2.1
pkgdesc="Linear Programming based on GLPK"
url="http://hackage.haskell.org/package/hmatrix-glpk"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hmatrix' 'glpk')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hmatrix-glpk/0.2.1/hmatrix-glpk-0.2.1.tar.gz)
install=haskell-hmatrix-glpk.install
md5sums=('3783b56eff8e5563b1bebf176b91f443')
build() {
    cd ${srcdir}/hmatrix-glpk-0.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/hmatrix-glpk
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
