pkgname=haskell-vec-transform
pkgrel=2
pkgver=1.0.2
pkgdesc="Extends the Vec package with some 4x4 transform matrices"
url="http://hackage.haskell.org/package/Vec-Transform"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-vec')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Vec-Transform/1.0.2/Vec-Transform-1.0.2.tar.gz)
install=haskell-vec-transform.install
md5sums=('2d22906f5eb641c4680063e6cc89d51f')
build() {
    cd ${srcdir}/Vec-Transform-1.0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Vec-Transform
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
