makedepends=('ghc' 'haskell-cabal' 'haskell-cairo' 'haskell-containers' 'haskell-fgl' 'haskell-glib' 'haskell-gtk' 'haskell-haskell98' 'haskell-hxt' 'haskell-mtl' 'haskell-process' 'haskell-sifflet-lib>=1.1' 'haskell-unix' 'gtk')
