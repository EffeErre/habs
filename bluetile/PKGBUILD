# Maintainer: Arch Haskell Team <arch-haskell@haskell.org>
_hkgname=bluetile
pkgname=bluetile
pkgver=0.5.3
pkgrel=1
pkgdesc="full-featured tiling for the GNOME desktop environment"
url="http://hackage.haskell.org/package/${_hkgname}"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-configfile' 'haskell-x11>=1.4' 'haskell-x11-xft' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-glade' 'haskell-gtk' 'haskell-mtl' 'haskell-process' 'haskell-random' 'haskell-regex-compat' 'haskell-unix' 'haskell-utf8-string' 'xmonad>=0.9.1' 'xmonad-contrib>=0.9.1')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
    runhaskell Setup build
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
md5sums=('6c3aecd280640f8435a8400e102cae95')
