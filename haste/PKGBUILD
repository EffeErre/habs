pkgrel=2
pkgver=0.1.1
pkgdesc="A universal pastebin tool, written in Haskell."
url="http://hackage.haskell.org/package/haste"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-curl' 'haskell-filepath' 'haskell-mtl')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/haste/0.1.1/haste-0.1.1.tar.gz)
