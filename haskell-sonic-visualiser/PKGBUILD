license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-bzlib' 'haskell-containers' 'haskell-mtl' 'haskell-pretty' 'haskell-utf8-string' 'haskell-xml')
