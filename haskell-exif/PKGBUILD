# Package generated by cabal2arch 0.7
# Note: we list all package dependencies.
# Your package tool should understand 'provides' syntax
#
pkgname=haskell-exif
pkgrel=1
pkgver=3000.0.0
pkgdesc="A Haskell binding to a subset of libexif"
url="http://hackage.haskell.org/package/exif"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'libexif')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/exif/3000.0.0/exif-3000.0.0.tar.gz)
install=haskell-exif.install
md5sums=('c115ac9048d14b648cec2a6e6da7b436')
build() {
    cd ${srcdir}/exif-3000.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/exif
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
