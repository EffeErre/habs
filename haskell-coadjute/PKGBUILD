pkgname=haskell-coadjute
pkgrel=2
pkgver=0.0.1
pkgdesc="A generic build tool"
url="http://hackage.haskell.org/package/Coadjute"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-bytestring-csv' 'haskell-containers' 'haskell-directory' 'haskell-fgl' 'haskell-filepath' 'haskell-mtl' 'haskell-old-time' 'haskell-pretty' 'haskell-puremd5' 'haskell-regex-dfa' 'haskell-safe' 'haskell-utf8-string')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Coadjute/0.0.1/Coadjute-0.0.1.tar.gz)
install=haskell-coadjute.install
md5sums=('21c00d8374b3ee4837f02bb27e57c7f3')
build() {
    cd ${srcdir}/Coadjute-0.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Coadjute
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
