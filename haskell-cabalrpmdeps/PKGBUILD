pkgname=haskell-cabalrpmdeps
pkgrel=2
pkgver=0.0.4
pkgdesc="Autogenerate rpm dependencies from cabal files"
url="http://hackage.haskell.org/package/cabalrpmdeps"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cabal' 'haskell-filepath' 'haskell-haskell98')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cabalrpmdeps/0.0.4/cabalrpmdeps-0.0.4.tar.gz)
install=haskell-cabalrpmdeps.install
md5sums=('e29741b41afc934776b5c4c8d706b362')
build() {
    cd ${srcdir}/cabalrpmdeps-0.0.4
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/cabalrpmdeps
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
