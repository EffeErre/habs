pkgname=cpsa
pkgrel=1
pkgver=2.1.1
pkgdesc="Symbolic cryptographic protocol analyzer"
url="http://hackage.haskell.org/package/cpsa"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-parallel')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cpsa/2.1.1/cpsa-2.1.1.tar.gz)
