pkgname=haskell-salvia-protocol
pkgrel=1
pkgver=1.0.1
pkgdesc="Salvia webserver protocol suite supporting URI, HTTP, Cookie and MIME."
url="http://hackage.haskell.org/package/salvia-protocol"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bimap' 'haskell-bytestring' 'haskell-containers' 'haskell-fclabels' 'haskell-parsec' 'haskell-safe' 'haskell-split' 'haskell-utf8-string')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/salvia-protocol/1.0.1/salvia-protocol-1.0.1.tar.gz)
install=haskell-salvia-protocol.install
md5sums=('4cf821993e5bf6b522677d930dc05ba1')
build() {
    cd ${srcdir}/salvia-protocol-1.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/salvia-protocol
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
