pkgname=haskell-monad-parallel
pkgrel=1
pkgver=0.5.1
pkgdesc="Parallel execution of monadic computations"
url="http://hackage.haskell.org/package/monad-parallel"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-parallel' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/monad-parallel/0.5.1/monad-parallel-0.5.1.tar.gz)
install=haskell-monad-parallel.install
md5sums=('73d2b1965d61a92767e0b3c867133267')
build() {
    cd ${srcdir}/monad-parallel-0.5.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/monad-parallel
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
