pkgname=haskell-lru
pkgrel=2
pkgver=0.1.1
pkgdesc="Implements an LRU data structure"
url="http://hackage.haskell.org/package/LRU"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck' 'haskell-containers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/LRU/0.1.1/LRU-0.1.1.tar.gz)
install=haskell-lru.install
md5sums=('0c7ecb7748a13e96c2d2785791b24b7d')
build() {
    cd ${srcdir}/LRU-0.1.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/LRU
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
