pkgname=haskell-etherbunny
pkgrel=2
pkgver=0.3
pkgdesc="A network analysis toolkit for Haskell"
url="http://hackage.haskell.org/package/Etherbunny"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-bytestring' 'haskell-haskell98' 'haskell-network' 'haskell-pcap' 'libpcap')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Etherbunny/0.3/Etherbunny-0.3.tar.gz)
install=haskell-etherbunny.install
md5sums=('75a302e782b22be631b48215fa638726')
build() {
    cd ${srcdir}/Etherbunny-0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/Etherbunny
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
