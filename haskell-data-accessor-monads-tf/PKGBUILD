pkgdesc="Use Accessor to access state in monads-tf State monad type family"
url="http://hackage.haskell.org/package/data-accessor-monads-tf"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-data-accessor' 'haskell-monads-tf' 'haskell-transformers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/data-accessor-monads-tf/0.2.1.2/data-accessor-monads-tf-0.2.1.2.tar.gz)
install=haskell-data-accessor-monads-tf.install
