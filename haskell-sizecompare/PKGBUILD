pkgname=haskell-sizecompare
pkgrel=1
pkgver=0.1
pkgdesc="Fast size comparison for standard containers."
url="http://hackage.haskell.org/package/SizeCompare"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers>=0.2')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/SizeCompare/0.1/SizeCompare-0.1.tar.gz)
install=haskell-sizecompare.install
md5sums=('859fb1dec42916a588b93c217c339fb6')
build() {
    cd ${srcdir}/SizeCompare-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/SizeCompare
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
