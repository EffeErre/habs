pkgname=haskell-gtk
pkgrel=1
pkgver=0.11.2
pkgdesc="Binding to the Gtk+ graphical user interface library."
url="http://hackage.haskell.org/package/gtk"
license=('LGPL-2.1')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-bytestring' 'haskell-cairo' 'haskell-containers' 'haskell-gio' 'haskell-glib' 'haskell-haskell98' 'haskell-mtl' 'haskell-pango' 'gtkglext' 'gtk2hs-buildtools' 'gtk2hs-buildtools' 'gtk2hs-buildtools')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/gtk/0.11.2/gtk-0.11.2.tar.gz)
install=haskell-gtk.install
md5sums=('ede94895ef679f1c6102c7eee5f021a1')
build() {
    cd ${srcdir}/gtk-0.11.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/gtk
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
