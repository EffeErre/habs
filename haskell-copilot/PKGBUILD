pkgname=haskell-copilot
pkgrel=1
pkgver=0.22
pkgdesc="A stream DSL for writing embedded C."
url="http://hackage.haskell.org/package/copilot"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-atom>=1.0.5' 'haskell-containers>=0.2.0.1' 'haskell-directory' 'haskell-filepath>=1.0.0.0' 'haskell-mtl>=1.0.0.0' 'haskell-process>=1.0.0.0' 'haskell-random>=1.0.0.0')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/copilot/0.22/copilot-0.22.tar.gz)
install=haskell-copilot.install
md5sums=('2d1ece3d90262cfa7ed7dd834378d3ef')
build() {
    cd ${srcdir}/copilot-0.22
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/copilot
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
