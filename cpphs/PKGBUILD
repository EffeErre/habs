pkgname=cpphs
pkgrel=1
pkgver=1.11
pkgdesc="A liberalised re-implementation of cpp, the C pre-processor."
url="http://hackage.haskell.org/package/cpphs"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('gmp' 'ghc' 'haskell-cabal' 'haskell-haskell98')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cpphs/1.11/cpphs-1.11.tar.gz)
install=cpphs.install
md5sums=('ece7f9a5335a8fd569f0b8c7153ecfaa')
build() {
    cd ${srcdir}/cpphs-1.11
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/cpphs
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
