pkgname=haskell-cassandra-thrift
pkgrel=1
pkgver=0.0.5
pkgdesc="thrift bindings to the cassandra database"
url="http://hackage.haskell.org/package/cassandra-thrift"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-thrift' 'haskell-containers')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/cassandra-thrift/0.0.5/cassandra-thrift-0.0.5.tar.gz)
install=haskell-cassandra-thrift.install
md5sums=('6d35092ea0048da6a3ec4ebe9ca2f89f')
build() {
    cd ${srcdir}/cassandra-thrift-0.0.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/cassandra-thrift
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
