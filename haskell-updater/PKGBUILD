pkgname=haskell-updater
pkgrel=1
pkgver=1.0.0.0
pkgdesc="Rebuild Haskell dependencies in Gentoo"
url="http://hackage.haskell.org/package/haskell-updater"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-cabal' 'haskell-bytestring<1.0' 'haskell-containers<0.4' 'haskell-directory<1.1' 'haskell-filepath<1.2' 'haskell-process<1.1')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/haskell-updater/1.0.0.0/haskell-updater-1.0.0.0.tar.gz)
md5sums=('75091cf580e20b5d1b2703767f9086c9')
build() {
    cd ${srcdir}/haskell-updater-1.0.0.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
