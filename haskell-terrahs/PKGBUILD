pkgname=haskell-terrahs
pkgrel=2
pkgver=0.8
pkgdesc="A Haskell GIS Programming Environment"
url="http://hackage.haskell.org/package/terrahs"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-old-time' 'terralib4c' 'translib')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/terrahs/0.8/terrahs-0.8.tar.gz)
install=haskell-terrahs.install
md5sums=('361150ff7474d598913b57d963213ff5')
build() {
    cd ${srcdir}/terrahs-0.8
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/terrahs
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
