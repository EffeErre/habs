pkgname=haskell-yajl-enumerator
pkgrel=1
pkgver=0.2
pkgdesc="Enumerator-based interface to YAJL, an event-based JSON implementation"
url="http://hackage.haskell.org/package/yajl-enumerator"
license=('GPL-3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-bytestring' 'haskell-enumerator' 'haskell-text' 'haskell-transformers' 'haskell-yajl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/yajl-enumerator/0.2/yajl-enumerator-0.2.tar.gz)
install=haskell-yajl-enumerator.install
md5sums=('8c462d0bb268c2bfcae8a8ddd73f4e84')
build() {
    cd ${srcdir}/yajl-enumerator-0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/yajl-enumerator
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
