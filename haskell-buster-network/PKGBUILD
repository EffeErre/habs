pkgname=haskell-buster-network
pkgrel=2
pkgver=1.2
pkgdesc="Almost but not quite entirely unlike FRP"
url="http://hackage.haskell.org/package/buster-network"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-http>=4000.0.0' 'haskell-binary' 'haskell-buster>=2.0' 'haskell-bytestring' 'haskell-containers' 'haskell-dataenc' 'haskell-haxr>=3000.2.1' 'haskell-mtl' 'haskell-network' 'haskell-old-locale' 'haskell-pretty' 'haskell-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/buster-network/1.2/buster-network-1.2.tar.gz)
install=haskell-buster-network.install
md5sums=('583fa57079969e4e82171d99261e1f82')
build() {
    cd ${srcdir}/buster-network-1.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/buster-network
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
