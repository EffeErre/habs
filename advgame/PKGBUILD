pkgname=advgame
pkgrel=1
pkgver=0.1.2
pkgdesc="Lisperati's adventure game in Lisp translated to Haskell"
url="http://hackage.haskell.org/package/Advgame"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-mtl')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/Advgame/0.1.2/Advgame-0.1.2.tar.gz)
