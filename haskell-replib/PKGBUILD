pkgname=haskell-replib
pkgrel=1
pkgver=0.2.2
pkgdesc="Generic programming library with representation types"
url="http://hackage.haskell.org/package/RepLib"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-mtl' 'haskell-template-haskell')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/RepLib/0.2.2/RepLib-0.2.2.tar.gz)
install=haskell-replib.install
md5sums=('42f7478f191dadb106b60b2323d3b6f9')
build() {
    cd ${srcdir}/RepLib-0.2.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/RepLib
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
