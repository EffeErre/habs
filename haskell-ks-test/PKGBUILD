pkgname=haskell-ks-test
pkgrel=1
pkgver=0.1
pkgdesc="Kolmogorov distribution and Kolmogorov-Smirnov test."
url="http://hackage.haskell.org/package/ks-test"
license=('custom:PublicDomain')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-gamma' 'haskell-random-fu' 'haskell-roots' 'haskell-vector')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/ks-test/0.1/ks-test-0.1.tar.gz)
install=haskell-ks-test.install
md5sums=('96b9ddbdec836d781df92394b5635ab1')
build() {
    cd ${srcdir}/ks-test-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/ks-test
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
