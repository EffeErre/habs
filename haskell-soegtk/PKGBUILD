pkgname=haskell-soegtk
pkgrel=1
pkgver=0.11.0
pkgdesc="GUI functions as used in the book \"The Haskell School of Expression\"."
url="http://hackage.haskell.org/package/soegtk"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-cairo' 'haskell-containers' 'haskell-glib' 'haskell-gtk' 'haskell-haskell98' 'haskell-mtl' 'haskell-old-time>=1.0.0.2' 'gtkglext')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/soegtk/0.11.0/soegtk-0.11.0.tar.gz)
install=haskell-soegtk.install
md5sums=('0cca72263a728a73cf14950e6ae8aa9a')
build() {
    cd ${srcdir}/soegtk-0.11.0
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/soegtk
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
