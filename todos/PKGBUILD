license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-glob' 'haskell-ansi-terminal' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-haskell98' 'haskell-mtl' 'haskell-parsec' 'haskell-process' 'haskell-regex-pcre' 'haskell-syb' 'haskell-time' 'haskell-utf8-string')
