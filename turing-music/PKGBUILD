pkgname=turing-music
pkgrel=2
pkgver=0.1.1
pkgdesc="Plays music generated by Turing machines with 5 states and 2 symbols"
url="http://hackage.haskell.org/package/turing-music"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-alut>=2')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/turing-music/0.1.1/turing-music-0.1.1.tar.gz)
