pkgname=haskell-wxgeneric
pkgrel=1
pkgver=0.6.1
pkgdesc="Generic (SYB3) construction of wxHaskell widgets"
url="http://hackage.haskell.org/package/WxGeneric"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-sybwidget' 'haskell-containers' 'haskell-haskell98' 'haskell-mtl' 'haskell-wx' 'haskell-wxcore' 'haskell-xtc')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/WxGeneric/0.6.1/WxGeneric-0.6.1.tar.gz)
install=haskell-wxgeneric.install
md5sums=('385d9c7249c7534caa4b08566e6d3324')
build() {
    cd ${srcdir}/WxGeneric-0.6.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/WxGeneric
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
