pkgname=haskell-haskelldb-hdbc-postgresql
pkgrel=1
pkgver=0.13
pkgdesc="HaskellDB support for the HDBC PostgreSQL driver."
url="http://hackage.haskell.org/package/haskelldb-hdbc-postgresql"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hdbc' 'haskell-hdbc-postgresql' 'haskell-haskelldb' 'haskell-haskelldb-hdbc' 'haskell-mtl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/haskelldb-hdbc-postgresql/0.13/haskelldb-hdbc-postgresql-0.13.tar.gz)
install=haskell-haskelldb-hdbc-postgresql.install
md5sums=('9a966f7ae1c895fc729198b8fdb30654')
build() {
    cd ${srcdir}/haskelldb-hdbc-postgresql-0.13
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/haskelldb-hdbc-postgresql
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
