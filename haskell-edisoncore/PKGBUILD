pkgname=haskell-edisoncore
pkgrel=2
pkgver=1.2.1.3
pkgdesc="A library of efficent, purely-functional data structures (Core Implementations)"
url="http://hackage.haskell.org/package/EdisonCore"
license=('custom:OtherLicense')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-edisonapi=1.2.1' 'haskell-quickcheck' 'haskell-array' 'haskell-containers' 'haskell-mtl')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/EdisonCore/1.2.1.3/EdisonCore-1.2.1.3.tar.gz)
install=haskell-edisoncore.install
md5sums=('b496de63ef077887c1e48829eefe060d')
build() {
    cd ${srcdir}/EdisonCore-1.2.1.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/EdisonCore
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 COPYRIGHT ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
