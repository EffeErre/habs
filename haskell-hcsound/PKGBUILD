pkgname=haskell-hcsound
pkgrel=2
pkgver=0.2.3
pkgdesc="interface to CSound API"
url="http://hackage.haskell.org/package/hCsound"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-haskell98' 'haskell-mtl' 'csound5' 'libsndfile' 'c2hs')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hCsound/0.2.3/hCsound-0.2.3.tar.gz)
install=haskell-hcsound.install
md5sums=('e7544956e1741e7a3b26bae20e549507')
build() {
    cd ${srcdir}/hCsound-0.2.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/hCsound
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
