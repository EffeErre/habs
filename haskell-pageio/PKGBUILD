pkgname=haskell-pageio
pkgrel=2
pkgver=0.0.3
pkgdesc="Page-oriented extraction and composition library"
url="http://hackage.haskell.org/package/PageIO"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-attoparsec>=0.4' 'haskell-base64-string' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-iconv' 'haskell-network' 'haskell-old-time' 'haskell-regex-base' 'haskell-regex-compat' 'haskell-regex-tdfa' 'haskell-sqlite' 'haskell-stringtable-atom' 'haskell-utf8-string' 'haskell-uuid')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/PageIO/0.0.3/PageIO-0.0.3.tar.gz)
install=haskell-pageio.install
md5sums=('aa143b3478784af33af2fd96cf3b0779')
build() {
    cd ${srcdir}/PageIO-0.0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/PageIO
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
