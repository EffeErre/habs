pkgname=haskell-unlambda
pkgrel=2
pkgver=0.1
pkgdesc="Unlambda interpreter"
url="http://hackage.haskell.org/package/unlambda"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-mtl' 'haskell-unix')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/unlambda/0.1/unlambda-0.1.tar.gz)
install=haskell-unlambda.install
md5sums=('2d31c90b3888043b8de77bb87f88bfcb')
build() {
    cd ${srcdir}/unlambda-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/unlambda
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
