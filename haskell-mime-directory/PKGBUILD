pkgname=haskell-mime-directory
pkgrel=2
pkgver=0.5
pkgdesc="A library for parsing/printing the text/directory mime type."
url="http://hackage.haskell.org/package/mime-directory"
license=('LGPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-base64-string' 'haskell-bytestring>=0.9' 'haskell-containers' 'haskell-old-locale' 'haskell-regex-pcre>=0.94' 'haskell-time>=1.1')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/mime-directory/0.5/mime-directory-0.5.tar.gz)
install=haskell-mime-directory.install
md5sums=('2cbb2ec174fce078bd1638e75f7852f6')
build() {
    cd ${srcdir}/mime-directory-0.5
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/mime-directory
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
