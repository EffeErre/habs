pkgname=tetris
pkgrel=2
pkgver=0.27178
pkgdesc="A 2-D clone of Tetris"
url="http://hackage.haskell.org/package/tetris"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-glut' 'haskell-random')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/tetris/0.27178/tetris-0.27178.tar.gz)
md5sums=('004329095692a3993a4eb4c9583f971f')
build() {
    cd ${srcdir}/tetris-0.27178
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
