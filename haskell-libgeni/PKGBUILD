pkgver=0.16.1
pkgdesc="A natural language generator (specifically, an FB-LTAG surface realiser)"
url="http://hackage.haskell.org/package/libGenI"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-hunit' 'haskell-quickcheck' 'haskell-binary' 'haskell-containers' 'haskell-mtl' 'haskell-parsec' 'haskell-process')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/libGenI/0.16.1/libGenI-0.16.1.tar.gz)
install=haskell-libgeni.install
