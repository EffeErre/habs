pkgname=haskell-infinite-search
pkgrel=2
pkgver=0.12
pkgdesc="Exhaustively searchable infinite sets."
url="http://hackage.haskell.org/package/infinite-search"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/infinite-search/0.12/infinite-search-0.12.tar.gz)
install=haskell-infinite-search.install
md5sums=('302d74ffddb0576616ed1006b7ba91e1')
build() {
    cd ${srcdir}/infinite-search-0.12
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/infinite-search
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
