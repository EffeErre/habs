pkgname=haskell-cspm-interpreter
pkgrel=1
pkgver=0.4.0.2
pkgdesc="An interpreter for CSPM"
url="http://hackage.haskell.org/package/CSPM-Interpreter"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-cspm-corelanguage' 'haskell-cspm-frontend' 'haskell-array' 'haskell-containers' 'haskell-mtl' 'haskell-syb')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/CSPM-Interpreter/0.4.0.2/CSPM-Interpreter-0.4.0.2.tar.gz)
install=haskell-cspm-interpreter.install
md5sums=('e6e9f2112b689680b00c63ce9746280f')
build() {
    cd ${srcdir}/CSPM-Interpreter-0.4.0.2
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/CSPM-Interpreter
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 License ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
