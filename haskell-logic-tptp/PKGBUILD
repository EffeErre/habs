pkgrel=1
pkgver=0.2.0.3
pkgdesc="Import, export etc. for TPTP, a syntax for first-order logic"
url="http://hackage.haskell.org/package/logic-TPTP"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck>=2' 'haskell-ansi-wl-pprint' 'haskell-array' 'haskell-containers' 'haskell-haskell98' 'haskell-mtl' 'haskell-syb' 'haskell-utf8-prelude')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/logic-TPTP/0.2.0.3/logic-TPTP-0.2.0.3.tar.gz)
install=haskell-logic-tptp.install
md5sums=('d76a993080444a5bcdcc9275cd03b3c6')
build() {
    cd ${srcdir}/logic-TPTP-0.2.0.3
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/logic-TPTP
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
