pkgrel=1
pkgver=0.8
pkgdesc="Haskell SuperCollider SoundFile"
url="http://hackage.haskell.org/package/hsc3-sf-hsndfile"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-array' 'haskell-hsc3-sf=0.8' 'haskell-hsndfile' 'haskell-hsndfile-vector' 'haskell-vector>=0.5')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/hsc3-sf-hsndfile/0.8/hsc3-sf-hsndfile-0.8.tar.gz)
