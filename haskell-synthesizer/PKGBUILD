pkgname=haskell-synthesizer
pkgrel=2
pkgver=0.2.0.1
pkgdesc="Audio signal processing coded in Haskell"
url="http://hackage.haskell.org/package/synthesizer"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-quickcheck' 'haskell-array' 'haskell-binary' 'haskell-bytestring' 'haskell-containers' 'haskell-event-list' 'haskell-filepath' 'haskell-gnuplot' 'haskell-non-negative' 'haskell-numeric-prelude' 'haskell-numeric-quest' 'haskell-process' 'haskell-random' 'haskell-sox' 'haskell-storable-record' 'haskell-storablevector' 'haskell-transformers' 'haskell-utility-ht')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/synthesizer/0.2.0.1/synthesizer-0.2.0.1.tar.gz)
install=haskell-synthesizer.install
md5sums=('34c45d73025e7208ebfa6603268398da')
build() {
    cd ${srcdir}/synthesizer-0.2.0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/synthesizer
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
