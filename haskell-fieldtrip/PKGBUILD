pkgname=haskell-fieldtrip
pkgrel=1
pkgver=0.2.7
pkgdesc="Functional 3D"
url="http://hackage.haskell.org/package/FieldTrip"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-glut' 'haskell-memotrie' 'haskell-opengl>=2.2.3.0' 'haskell-typecompose' 'haskell-graphicsformats' 'haskell-old-time' 'haskell-vector-space>=0.5.7')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/FieldTrip/0.2.7/FieldTrip-0.2.7.tar.gz)
install=haskell-fieldtrip.install
md5sums=('122cf0548396e2e8dd2ccec567f7fe27')
build() {
    cd ${srcdir}/FieldTrip-0.2.7
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/FieldTrip
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}
