pkgname=haskell-chalkboard-viewer
pkgrel=2
pkgver=0.1
pkgdesc="OpenGL based viewer for chalkboard rendered images."
url="http://hackage.haskell.org/package/chalkboard-viewer"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-glut' 'haskell-opengl' 'haskell-array' 'haskell-chalkboard=0.2' 'haskell-time')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/chalkboard-viewer/0.1/chalkboard-viewer-0.1.tar.gz)
install=haskell-chalkboard-viewer.install
md5sums=('669f26c42056aa45773f37fe7d17d310')
build() {
    cd ${srcdir}/chalkboard-viewer-0.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/chalkboard-viewer
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
