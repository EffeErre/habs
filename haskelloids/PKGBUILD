url="http://hackage.haskell.org/package/Haskelloids"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-hgl' 'haskell-monadrandom' 'haskell-yampa' 'haskell-containers' 'haskell-hmatrix' 'haskell-random')
